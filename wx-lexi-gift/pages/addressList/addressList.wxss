/* pages/addressList/addressList.wxss */

.addressList {
  width: 750rpx;
  background-color: #fff;
}

.addressList .address-item {
  display: flex;
  align-items: center;
  margin-top: 36rpx;
  padding-bottom: 26rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.addressList .address-item .address-item__icon {
  flex: 0 0 auto;
  width: 105rpx;
  text-align: center;
}

.addressList .address-item .address-item__icon .icon-selected {
  width: 44rpx;
  height: 44rpx;
}

.addressList .address-item .address-item__body {
  flex: 1;
}

.addressList .address-item .address-item__body .name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  margin-bottom: 16rpx;
}

.addressList .address-item .address-item__body .street,
.addressList .address-item .address-item__body .phone {
  font-size: 24rpx;
  font-weight: 300;
  color: rgba(51, 51, 51, 1);
  line-height: 24rpx;
  margin-bottom: 16rpx;
}

.addressList .address-item .address-item__action {
  flex: 0 0 auto;
  width: 108rpx;
  border-left: 1rpx solid #e9e9e9;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  text-align: center;
}
