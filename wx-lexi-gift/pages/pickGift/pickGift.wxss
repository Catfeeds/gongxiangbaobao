/* pages/pickGift/pickGift.wxss */

.receiver-wrapper {
  width: 750rpx;
  display: flex;
  align-items: center;
  background: url('https://static.moebeast.com/static/img/icon-address-border@2x.png') no-repeat left bottom #fff;
  background-size: 750rpx 4rpx;
  margin-bottom: 20rpx;
}

.receiver-wrapper .receiver-empty {
  padding: 0rpx 30rpx;
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 142rpx;
  height: 142rpx;
}

.receiver-wrapper .receiver {
  padding: 0rpx 30rpx;
  height: 142rpx;
  flex: 1;
}

.receiver-wrapper .receiver .user {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  margin-top: 30rpx;
}

.receiver-wrapper .receiver .user .name {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 26rpx;
}

.receiver-wrapper .receiver .user .phone {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 26rpx;
}

.receiver-wrapper .receiver .address {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.receiver-wrapper .arrow {
  flex: 0 0 auto;
  width: 80rpx;
  text-align: center;
}

.receiver-wrapper .arrow .icon {
  width: 16rpx;
  height: 26rpx;
}

.gift-wrapper {
  width: 750rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e9e9e9;
}

.gift-wrapper .gift-image {
  flex: 0 0 auto;
  width: 130rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
}

.gift-wrapper .gift-image .cover {
  width: 130rpx;
  height: 130rpx;
}

.gift-wrapper .gift-product {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.gift-wrapper .gift-product .name {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  margin-bottom: 16rpx;
}

.gift-wrapper .gift-product .mode {
  font-size: 24rpx;
  font-weight: 300;
  color: rgba(178, 178, 178, 1);
  line-height: 24rpx;
  margin-bottom: 16rpx;
}

.gift-wrapper .gift-product .quantity {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
}

.gift-order {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  height: 88rpx;
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
}

.gift-order .label {
  flex: 1;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
}

.gift-order .amount {
  flex: 0 0 auto;
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 30rpx;
  color: rgba(255, 102, 102, 1);
  line-height: 34rpx;
}

.fx-modal--change .current-gift {
  display: flex;
}

.fx-modal--change .current-gift .cover {
  flex: 0 0 auto;
  width: 130rpx;
  height: 130rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.fx-modal--change .current-gift .gift-product {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.fx-modal--change .current-gift .gift-product .name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-bottom: 15rpx;
}

.fx-modal--change .current-gift .gift-product .sold-out {
  width: 91rpx;
  height: 34rpx;
  background: rgba(255, 102, 102, 1);
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  text-align: center;
}

.fx-modal--change .confirm-change {
  padding-top: 40rpx;
}

.fx-modal--change .confirm-change .title {
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  margin-bottom: 20rpx;
}

.fx-modal--change .confirm-change .desc {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 43rpx;
  margin-bottom: 50rpx;
}

.fx-modal--change .confirm-change .btn-pay {
  height: 80rpx;
  background: rgba(95, 228, 177, 1);
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(95, 228, 177, 0.51);
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
  margin-bottom: 20rpx;
}

.fx-modal--change .confirm-change .btn-giveup {
  height: 80rpx;
  background: #fff;
  border: 1rpx solid rgba(233, 233, 233, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 80rpx;
}

.fx-modal--change .gift-mark {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(255, 102, 102, 1);
  line-height: 26rpx;
  margin-top: 20rpx;
}
