/* pages/giftList/giftList.wxss */

.gift-opening-list {
  background-color: #fff;
  width: 750rpx;
}

.gift-opening-list .gift-item {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.gift-opening-list .gift-item .cover {
  flex: 0 0 auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8px;
  margin-right: 30rpx;
}

.gift-opening-list .gift-item .gift-item__body {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.gift-opening-list .gift-item .gift-item__body .title {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  margin-bottom: 20rpx;
}

.gift-opening-list .gift-item .gift-item__body .opening {
  width: 218rpx;
  height: 35rpx;
  background: rgba(95, 228, 177, 0.1967);
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(95, 228, 177, 1);
  line-height: 35rpx;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
}

.gift-opening-list .gift-item .gift-item__body .price-wrapper {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 20rpx;
  display: flex;
  align-items: baseline;
}

.gift-opening-list .gift-item .gift-item__body .price-wrapper .sale-price {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(255, 102, 102, 1);
  line-height: 40rpx;
  margin-right: 20rpx;
}
.gift-opening-list .gift-item .gift-item__body .price-wrapper .sale-price .currency {
  font-size: 24rpx;
}
.gift-opening-list .gift-item .gift-item__body .price-wrapper .price {
  text-decoration: line-through;
}

.gift-waiting-list {
  margin-top: 20rpx;
}

.gift-waiting-list .rule-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  margin: 40rpx 20rpx 20rpx;
}

.gift-waiting-list .rule-title .title {
  flex: 0 0 auto;
}

.gift-waiting-list .rule-title .quote-left {
  flex: 1;
  text-align: right;
}

.gift-waiting-list .rule-title .quote-right {
  flex: 1;
}

.gift-waiting-list .rule-title .icon-quote-left {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.gift-waiting-list .rule-title .icon-quote-right {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.gift-waiting-list .gift-item .gift-item__body .waiting {
  background:rgba(255,239,239,1);
  color:rgba(255,102,102,1);
}

.gift-list--empty {
  padding-top: 50rpx;
  text-align: center;
}

.gift-list--empty .icon-empty {
  width: 260rpx;
  height: 260rpx;
}

.gift-list--empty .description {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(169, 177, 184, 1);
  line-height: 32rpx;
}