/* pages/pickSuccess/pickSuccess.wxss */

.container {
  height: 100vh;
}

.got-result-wrapper {
  flex: 1;
  width: 750rpx;
  background-color: #fff;
}

.got-result-wrapper .got-success {
  text-align: center;
  padding: 142rpx 0 55rpx;
}

.got-success .icon-got-success {
  width: 306rpx;
  height: 164rpx;
}

.got-success .label {
  font-size: 40rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-bottom: 30rpx;
}

.got-success .desc {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
}

.got-result-wrapper .actions {
  padding: 0 48rpx;
}

.got-result-wrapper .actions .btn-share {
  margin-bottom: 30rpx;
}
