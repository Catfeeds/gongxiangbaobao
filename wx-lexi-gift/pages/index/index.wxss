
.gift-product {
  padding: 30rpx 30rpx 0;
  background-color: #fff;
}

.gift-product .product-box {
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 2rpx dashed #f2f2f2;
}

.gift-product .product-box .cover {
  flex: 0 0 auto;
  width: 170rpx;
  height: 170rpx;
  border-radius: 8rpx;
}

.gift-product .product-box .product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.gift-product .product-box .product-info .name {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(25, 25, 25, 1);
  line-height: 40rpx;
}

.gift-product .product-box .product-info .price {
}

.gift-product .product-box .product-info .price .sale-price {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(255, 102, 102, 1);
  line-height: 40rpx;
  margin-right: 10rpx;
}

.gift-product .product-box .product-info .price .old-price {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 20rpx;
}

.gift-product .product-images {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.gift-product .product-images .asset {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
}

.gift-setting {
  padding: 40rpx 30rpx 0;
  background-color: #fff;
}

.gift-setting .lottery {
  width: 690rpx;
  height: 90rpx;
  background: rgba(255, 239, 239, 1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.gift-setting .lottery .icon-gift-box {
  width: 60rpx;
  height: 60rpx;
  flex: 0 0 auto;
  margin-left: 10rpx;
}

.gift-setting .lottery .lottery-summary {
  flex: 1;
  margin-left: 20rpx;
}

.gift-setting .lottery .title {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(255, 102, 102, 1);
  line-height: 24rpx;
  margin-bottom: 10rpx;
}

.gift-setting .lottery .sub-title {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 20rpx;
}

.gift-setting .form-people, .gift-setting .form-blessing {
  width: 690rpx;
  height: 120rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.gift-setting .form-people .icon-people, .gift-setting .form-blessing .icon-edit {
  flex: 0 0 auto;
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 20rpx;
  border-right: 1rpx solid #f2f2f2;
}

.gift-setting .form-people .form-input, .gift-setting .form-blessing .form-input {
  flex: 1;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(178, 178, 178, 1);
  line-height: 30rpx;
}

.gift-result {
  width: 750rpx;
  border-top: 1rpx solid #e9e9e9;
  background-color: #f8f8f8;
  padding-bottom: 134rpx;
}

.got-result {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 40rpx 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(233, 233, 233, 1);
}

.gift-result .title {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
}

.gift-result .got-people {
  margin-top: 30rpx;
}

.gift-result .got-people .people-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  box-shadow: 0px 1px 0px 0px rgba(233, 233, 233, 1);
}

.gift-result .got-people .people-item .icon-avatar {
  flex: 0 0 auto;
  width: 48rpx;
  height: 48rpx;
  border-radius: 48rpx;
  border: 2rpx solid #fff;
  margin-right: 20rpx;
}

.gift-result .got-people .people-item .name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.gift-result .got-people .people-item .date {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
}

.give-button {
  width: 450rpx;
  height: 88rpx;
  background: rgba(95, 228, 177, 1);
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(95, 228, 177, 0.51);
  border-radius: 44rpx;
  position: fixed;
  bottom: 22rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  z-index: 999;
}
