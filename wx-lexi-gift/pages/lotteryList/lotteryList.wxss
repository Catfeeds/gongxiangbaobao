/* pages/lotteryList/lotteryList.wxss */

.gift-list {
  width: 750rpx;
}

.gift-item {
  background-color: #fff;
  margin-top: 20rpx;
}

.gift-item .gift-item__body {
  padding: 30rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
}

.gift-item .gift-item__foot {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
}

.gift-item .gift-item__body .gift-image {
  flex: 0 0 auto;
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.gift-item .gift-item__body .gift-image .cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}

.gift-item .gift-item__body .gift-image .progress-result {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  z-index: 9;
  width: 199rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.4583);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  text-align: center;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.gift-item .gift-item__body .gift-product {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.gift-item .gift-item__body .gift-product .title {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.gift-item .gift-item__body .gift-product .user {
  display: flex;
  align-items: center;
}

.gift-item .gift-item__body .gift-product .user .avatar {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.gift-item .gift-item__body .gift-product .user .name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  margin-right: 10rpx;
}

.gift-item .gift-item__body .gift-product .user .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  line-height: 33rpx;
}

.gift-item .gift-item__body .gift-product .progress {
  display: flex;
  align-items: center;
}

.gift-item .gift-item__body .gift-product .progress .reach-count {
  height: 36rpx;
  background: rgba(255, 239, 239, 1);
  border-radius: 2rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 102, 102, 1);
  line-height: 36rpx;
  padding: 6rpx 8rpx;
}

.gift-item .gift-item__body .gift-product .progress .now-count {
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
  margin-left: 20rpx;
}

.gift-item .gift-item__foot .btn-lottery {
  margin: 0;
  flex: 0 0 auto;
  width: 184rpx;
  text-align: center;
}

.gift-list--empty {
  padding-top: 50rpx;
  text-align: center;
}

.gift-list--empty .icon-empty {
  width: 260rpx;
  height: 260rpx;
}

.gift-list--empty .description {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(169, 177, 184, 1);
  line-height: 32rpx;
}