/* pages/lotteryList/lotteryList.wxss */

.gift-list {
  width: 750rpx;
}

.gift-item {
  background-color: #fff;
  margin-top: 20rpx;
}

.gift-item .gift-item__body {
  padding: 30rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  align-items: center;
}

.gift-item .gift-item__foot {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
}

.gift-item .gift-item__body .cover {
  flex: 0 0 auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}

.gift-item .gift-item__body .gift-product {
  flex: 1;
}

.gift-item .gift-item__body .gift-product .title {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  margin-bottom: 20rpx;
}

.gift-item .gift-item__body .gift-product .user {
  display: flex;
  align-items: center;
  margin-bottom: 64rpx;
}

.gift-item .gift-item__body .gift-product .user .avatar {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.gift-item .gift-item__body .gift-product .user .name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  margin-right: 10rpx;
}

.gift-item .gift-item__body .gift-product .user .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  line-height: 33rpx;
}

.gift-item .gift-item__body .gift-product .progress {
  display: flex;
  align-items: center;
}

.gift-item .gift-item__body .gift-product .progress .reach-count {
  height: 36rpx;
  background: rgba(255, 239, 239, 1);
  border-radius: 2rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 102, 102, 1);
  line-height: 36rpx;
  padding: 6rpx 8rpx;
}

.gift-item .gift-item__body .gift-product .progress .now-count {
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
  margin-left: 20rpx;
}

.gift-item .gift-item__foot .btn-lottery {
  display: inline-flex;
  margin: 0;
  flex: 0 0 auto;
  width:184rpx;
}