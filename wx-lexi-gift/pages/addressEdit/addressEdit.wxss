/* pages/addressEdit/addressEdit.wxss */

.address-form {
  width: 750rpx;
  padding-bottom: 120rpx;
  padding-top: 20rpx;
}

.address-form .form-item {
  background-color: #fff;
  border-bottom: 1rpx solid #e9e9e9;
  padding-left: 30rpx;
}

.address-form .form-item.set-default {
  margin-top: 20rpx;
  padding: 15rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-form .form-item.set-default .label {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.address-form .form-item .phcolor {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
}

.address-form .form-item .form-input {
  line-height: 96rpx;
  height: 96rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.address-form .form-item .form-textarea {
  padding-top: 30rpx;
  height: 140rpx;
  width: 690rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker .country {
  flex: 0 0 auto;
  font-size: 28rpx;
  line-height: 96rpx;
  height: 96rpx;
  color: rgba(51, 51, 51, 1);
}
.picker .street {
  flex: 1;
  font-size: 28rpx;
  line-height: 96rpx;
  height: 96rpx;
  color: rgba(51, 51, 51, 1);
}
.picker .icon-arrow {
  flex: 0 0 auto;
  width: 16rpx;
  height: 26rpx;
  margin-right: 30rpx;
}

.picker .street {
  flex: 1;
}

.custom-wrapper {
  background-color: #fff;
}

.custom-wrapper .title {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 102, 102, 1);
  line-height: 24rpx;
  padding: 30rpx;
  background-color: #f8f8f8;
}

.custom-wrapper .form-photo {
  display: flex;
  align-items: center;
  padding: 30rpx;
  justify-content: space-between;
}

.form-photo .photo-upload {
  width: 318rpx;
}

.form-photo .photo-upload .upload-box {
  margin-bottom: 20rpx;
  height: 210rpx;
  background: rgba(247, 249, 251, 1);
}

.form-photo .photo-upload .label {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
  text-align: center;
}

.upload-status__box {
  height: 8rpx;
  width: 250rpx;
  border-radius: 30rpx;
  border: 1rpx solid #e9e9e9;
  background-color: #999;
}

.upload-status__box .progress {
  height: 100%;
  border-radius: 60rpx;
  background-color: rgba(95, 228, 177, 1);
}

.form-photo .photo-upload .upload-box .plus {
  text-align: center;
  width: 318rpx;
  line-height: 210rpx;
  font-size: 64rpx;
  color: #666;
}
