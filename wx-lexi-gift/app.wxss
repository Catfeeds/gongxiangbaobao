/**app.wxss**/

button {
  border: none;
  outline: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.gift-banner {
  width: 750rpx;
  height: 180rpx;
  position: relative;
  background: url('https://static.moebeast.com/static/img/banner@2x.png') no-repeat;
  background-size: 750rpx 180rpx;
}

.gift-banner .title {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(116, 176, 153, 1);
  line-height: 40rpx;
  margin: 55rpx 0 10rpx 30rpx;
}

.gift-banner .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(116, 176, 153, 1);
  line-height: 24rpx;
  margin-left: 30rpx;
}

.fx-tabs {
  flex: 0 0 auto;
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #e9e9e9;
  background-color: #fff;
}

.fx-tabs .tab {
  flex: 0 0 auto;
  margin: 0 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(169, 177, 184, 1);
  line-height: 80rpx;
  border-bottom: 4rpx solid transparent;
}

.fx-tabs .tab.active {
  color: #5fe4b1;
  border-color: #5fe4b1;
}

.lottery-result {
  flex: 1;
}

.lottery-list--empty {
  padding-top: 50rpx;
  text-align: center;
}

.lottery-list--empty .icon-empty {
  width: 260rpx;
  height: 260rpx;
}

.lottery-list--empty .description {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(169, 177, 184, 1);
  line-height: 32rpx;
}

.lottery-list {
  width: 750rpx;
}

.lottery-list .lottery-item {
  background-color: #fff;
  border-bottom: 1rpx solid #e9e9e9;
  margin-top: 20rpx;
}

.lottery-list .lottery-item .lottery-item__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 0 30rpx;
  height: 88rpx;
}

.lottery-list .lottery-item .lottery-item__head .date {
  flex: 1;
  line-height: 88rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.lottery-list .lottery-item .lottery-item__head .status {
  flex: 0 0 auto;
  width: 104rpx;
  height: 36rpx;
  background: rgba(255, 142, 50, 0.1);
  border-radius: 18rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 142, 50, 1);
  line-height: 36rpx;
  text-align: center;
}

.lottery-list .lottery-item .lottery-item__head .status.ended {
  background: rgba(248, 249, 251, 1);
  color: rgba(153, 153, 153, 1);
}

.lottery-list .lottery-item .lottery-item__head .status.reded {
  background: rgba(255, 239, 239, 1);
  color: rgba(255, 102, 102, 1);
}

.lottery-list .lottery-item .lottery-item__head .status.hit {
  background: rgba(255, 239, 239, 1);
  color: rgba(255, 102, 102, 1);
  width: 140rpx;
}

.lottery-list .lottery-item .lottery-item__head .status .icon-gift {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.lottery-list .lottery-item .lottery-item__body {
  padding: 30rpx 30rpx 40rpx;
  display: flex;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__body .cover {
  flex: 0 0 auto;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info {
  flex: 1;
}

.lottery-list .lottery-item .lottery-item__body .product-info .name {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .options {
  margin-bottom: 20rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .options .mode,
.lottery-list .lottery-item .lottery-item__body .product-info .options .quantity {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
  margin-right: 20rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress {
  display: flex;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress .reach-result {
  height: 36rpx;
  background: rgba(248, 249, 251, 1);
  border-radius: 2rpx;
  font-size: 24rpx;
  font-weight: 400;
  padding: 5rpx 10rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress .reach-count {
  width: 141rpx;
  height: 36rpx;
  background: rgba(255, 239, 239, 1);
  border-radius: 2rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 102, 102, 1);
  line-height: 36rpx;
  margin-right: 20rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress .now-count {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
}

.lottery-list .lottery-item .lottery-item__foot {
  border-top: 1rpx solid #e9e9e9;
  padding: 0 30rpx;
  height: 98rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__foot .lottery-user {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__foot .icon-avatar {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.lottery-list .lottery-item .lottery-item__foot .user-name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  margin-right: 10rpx;
}

.lottery-list .lottery-item .lottery-item__foot .txt {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  line-height: 33rpx;
}

.lottery-list .lottery-item .lottery-item__foot .btn-got {
  flex: 0 0 auto;
  width: 160rpx;
  height: 58rpx;
  background: rgba(95, 228, 177, 1);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 58rpx;
}
