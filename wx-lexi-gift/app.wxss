/**app.wxss**/
button {
  border: none;
  outline: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.gift-banner {
  width: 750rpx;
  height: 180rpx;
  position: relative;
  background: url('https://static.moebeast.com/static/img/banner@2x.png') no-repeat;
  background-size: 750rpx 180rpx;
}

.gift-banner .title {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(116, 176, 153, 1);
  line-height: 40rpx;
  margin: 55rpx 0 10rpx 30rpx;
}

.gift-banner .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(116, 176, 153, 1);
  line-height: 24rpx;
  margin-left: 30rpx;
}


