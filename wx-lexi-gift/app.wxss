/**app.wxss**/

button {
  border: none;
  outline: none;
  margin: 0;
  padding: 0;
}

button::after {
  border: none;
}

page {
  background-color: #f8f8f8;
  overflow-x: hidden;
}

.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

/* 按钮 */

.fx-button {
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
}

.fx-button--primary {
  color: #fff;
  background: rgba(95, 228, 177, 1);
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(95, 228, 177, 0.51);
}

.fx-button--default {
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  border: 1px solid #e9e9e9;
}

.fx-btn {
  height: 60rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 60rpx;
  border-radius: 8rpx;
  padding: 0rpx 36rpx;
}

.fx-btn--primary {
  color: rgba(255, 255, 255, 1);
  background: rgba(95, 228, 177, 1);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.gift-banner {
  width: 750rpx;
  height: 180rpx;
  position: relative;
  background: url('https://static.moebeast.com/static/img/banner@2x.png') no-repeat;
  background-size: 750rpx 180rpx;
}

.gift-banner .head-banner {
  width: 750rpx;
  height: 180rpx;
}

.gift-banner .title {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(116, 176, 153, 1);
  line-height: 40rpx;
  margin: 55rpx 0 10rpx 30rpx;
}

.gift-banner .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(116, 176, 153, 1);
  line-height: 24rpx;
  margin-left: 30rpx;
}

.gift-banner .btn-rule {
  position: absolute;
  top: 30rpx;
  right: 0;
  z-index: 9;
  width: 121rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 100rpx 0rpx 0rpx 100rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
}

.fx-tabs {
  flex: 0 0 auto;
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #e9e9e9;
  background-color: #fff;
}

.fx-tabs .tab {
  flex: 0 0 auto;
  margin: 0 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(169, 177, 184, 1);
  line-height: 80rpx;
  border-bottom: 4rpx solid transparent;
}

.fx-tabs .tab.active {
  color: #5fe4b1;
  border-color: #5fe4b1;
}

.lottery-result {
  flex: 1;
}

.lottery-list--empty {
  padding-top: 50rpx;
  text-align: center;
}

.lottery-list--empty .icon-empty {
  width: 260rpx;
  height: 260rpx;
}

.lottery-list--empty .description {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(169, 177, 184, 1);
  line-height: 32rpx;
}

.lottery-list {
  width: 750rpx;
}

.lottery-list .lottery-item {
  background-color: #fff;
  border-bottom: 1rpx solid #e9e9e9;
  margin-top: 20rpx;
}

.lottery-list .lottery-item .lottery-item__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 0 30rpx;
  height: 88rpx;
}

.lottery-list .lottery-item .lottery-item__head .date {
  flex: 1;
  line-height: 88rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.lottery-list .lottery-item .lottery-item__head .status {
  flex: 0 0 auto;
  width: 104rpx;
  height: 36rpx;
  background: rgba(255, 142, 50, 0.1);
  border-radius: 18rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 142, 50, 1);
  line-height: 36rpx;
  text-align: center;
}

.lottery-list .lottery-item .lottery-item__head .status.ended {
  background: rgba(248, 249, 251, 1);
  color: rgba(153, 153, 153, 1);
}

.lottery-list .lottery-item .lottery-item__head .status.reded {
  background: rgba(255, 239, 239, 1);
  color: rgba(255, 102, 102, 1);
}

.lottery-list .lottery-item .lottery-item__head .status.hit {
  background: rgba(255, 239, 239, 1);
  color: rgba(255, 102, 102, 1);
  width: 140rpx;
}

.lottery-list .lottery-item .lottery-item__head .status .icon-gift {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.lottery-list .lottery-item .lottery-item__body {
  padding: 30rpx 30rpx 40rpx;
  display: flex;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__body .cover {
  flex: 0 0 auto;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info {
  flex: 1;
}

.lottery-list .lottery-item .lottery-item__body .product-info .name {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .options {
  margin-bottom: 20rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .options .mode,
.lottery-list .lottery-item .lottery-item__body .product-info .options .quantity {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
  margin-right: 20rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress {
  display: flex;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress .reach-result {
  height: 36rpx;
  background: rgba(248, 249, 251, 1);
  border-radius: 2rpx;
  font-size: 24rpx;
  font-weight: 400;
  padding: 5rpx 10rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress .reach-count {
  width: 136rpx;
  height: 36rpx;
  background: rgba(255, 239, 239, 1);
  border-radius: 2rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding-left: 5rpx;
  color: rgba(255, 102, 102, 1);
  line-height: 36rpx;
  margin-right: 20rpx;
}

.lottery-list .lottery-item .lottery-item__body .product-info .progress .now-count {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
}

.lottery-list .lottery-item .lottery-item__foot {
  border-top: 1rpx solid #e9e9e9;
  padding: 0 30rpx;
  height: 98rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__foot .lottery-user {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.lottery-list .lottery-item .lottery-item__foot .icon-avatar {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.lottery-list .lottery-item .lottery-item__foot .user-name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  margin-right: 10rpx;
}

.lottery-list .lottery-item .lottery-item__foot .txt {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  line-height: 33rpx;
}

.lottery-list .lottery-item .lottery-item__foot .btn-got {
  flex: 0 0 auto;
  width: 160rpx;
  height: 58rpx;
  background: rgba(95, 228, 177, 1);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 58rpx;
}

.gift-share-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
  width: 690rpx;
  height: 100rpx;
  padding: 0 30rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gift-share-wrapper .form-getid {
  flex: 0 0 335rpx;
}

.gift-share-wrapper .btn-share {
  flex: 0 0 335rpx;
  height: 80rpx;
  background: rgba(95, 228, 177, 1);
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
  text-align: center;
}

.gift-share-wrapper .btn-full {
  flex: 0 0 690rpx;
}

.gift-share-wrapper .btn-more, .gift-share-wrapper .btn-give {
  height: 80rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 80rpx;
}

.gift-share-wrapper .btn-give.opened {
  background: rgba(95, 228, 177, 1);
  color: rgba(255, 255, 255, 1);
}

.gift-share-wrapper .btn-more--green {
  background-color: #fff;
  border: 1rpx solid #5fe4b1;
  color: #5fe4b1;
  height: 78rpx;
}

/* 分享弹窗 */

.share-wrapper {
  padding: 20rpx 30rpx 0;
}

.share-wrapper .distribute-style {
  background: rgba(255, 255, 255, 1);
  border: 1px solid #e9e9e9;
  display: flex;
  align-items: center;
}

.share-wrapper .distribute-style .label {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 22rpx;
}

.share-wrapper .distribute-style .wxa-card,
.share-wrapper .distribute-style .share-btn {
  border-right: 1px solid #e9e9e9;
  flex: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
}

.share-wrapper .distribute-style .wxa-card .cover,
.share-wrapper .distribute-style .share-btn .cover {
  width: 312rpx;
  height: 272rpx;
  margin-bottom: 25rpx;
}

.share-wrapper .distribute-style .wxa-poster {
  flex: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 29rpx 0 17rpx;
}

.share-wrapper .distribute-style .wxa-poster .cover {
  width: 163rpx;
  height: 266rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 25rpx;
}

.share-wrapper .distribute-style .wxa-poster .cover .image {
  width: 163rpx;
  height: 266rpx;
}

.share-wrapper .distribute-style .wxa-poster .loading {
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
}

.share-wrapper .distribute-action {
  display: flex;
  align-items: center;
}

.share-wrapper .distribute-action .share-friend,
.share-wrapper .distribute-action .share-save {
  flex: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.share-wrapper .distribute-action .share-friend .icon-wechat,
.share-wrapper .distribute-action .share-save .icon-save {
  flex: 1;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 22rpx;
}

.share-wrapper .distribute-action .label {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 24rpx;
}

.share-wrapper .distribute-action .share-save {
  flex: 50%;
  text-align: center;
}

.share-wrapper .distribute-cancle {
  width: 750rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 80rpx;
  text-align: center;
}

/* 规则 */

.fx-modal--rule .rule-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  margin-bottom: 20rpx;
}

.fx-modal--rule .rule-title .title {
  flex: 0 0 auto;
}

.fx-modal--rule .rule-title .quote-left {
  flex: 1;
  text-align: right;
}

.fx-modal--rule .rule-title .quote-right {
  flex: 1;
}

.fx-modal--rule .rule-title .icon-quote-left {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.fx-modal--rule .rule-title .icon-quote-right {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.fx-modal--rule .rule-content {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  height: 680rpx;
  overflow-y: auto;
}

.fx-modal--rule .rule-content .item {
  display: flex;
}

.fx-modal--rule .rule-content .item .number {
  flex: 0 0 auto;
  width: 32rpx;
  height: 32rpx;
  background: rgba(153, 153, 153, 1);
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 32rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  text-align: center;
  margin-top: 5rpx;
}

.fx-modal--rule .rule-content .item .txt {
  flex: 1;
}

/* 消息提醒 */

.gift-notice {
  width: 750rpx;
  height: 60rpx;
  background: rgba(255, 239, 239, 1);
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(255, 102, 102, 1);
  line-height: 60rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}

.gift-notice .icon-ball {
  flex: 0 0 auto;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.gift-notice .content {
  flex: 1;
}

/* 加载更多 */

.load-more__box {
  margin-top: 50rpx;
  line-height: 88rpx;
  text-align: center;
}

.load-more__box .load-more__icon {
  width: 64rpx;
  height: 64rpx;
}

.load-more--end {
  margin-top: 50rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
}
