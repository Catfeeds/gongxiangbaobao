      </view>
      <view>
        <view class='coupon-order-location-box'>
          <image src='../../images/icon-order@3x.png'></image>
        </view>
        <view>我的订单</view>
      </view>
      <view>
        <view class='coupon-order-location-box'>
          <image src='../../images/address@3x.png'></image>
        </view>
        <view>地址管理</view>
      </view>
    </view>
  </view>
  <image class='midlle-curve-photo' src='../../images/BG05@3x.png'></image>

    <view class='bottom-function'>
    <view class='bottom-btn'>
      <view>消息</view>
      <view class=' my-iocn fx-icon-nothing-right'></view>
    </view>
    <view class='bottom-btn'>
      <view>联系客服</view>
      <view class=' my-iocn fx-icon-nothing-right'></view>
    </view>
    <view class='bottom-btn last-btn'>
      <view>关于我们</view>
      <view class=' my-iocn fx-icon-nothing-right'></view>
    </view>
  </view>
