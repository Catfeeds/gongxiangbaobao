/* pages/guessResult/guessResult.wxss */

.main-wrapper {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.main-wrapper .main-container {
  flex: 1;
}

.result-top {
  width: 750rpx;
  height: 487rpx;
  background: url('https://static.moebeast.com/static/img/game/result-top.png') bottom;
  background-size: 100%;
}

.text-result {
  padding-left: 50rpx;
  padding-top: 60rpx;
}

.summary {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(243, 212, 255, 1);
  line-height: 40rpx;
  margin-top: 29rpx;
}

.quantity {
  font-size: 56rpx;
  font-weight: 600;
  color: rgba(243, 212, 255, 1);
  line-height: 48rpx;
  margin: 0 10rpx;
}

.top {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(243, 212, 255, 1);
  line-height: 26rpx;
  margin-top: 24rpx;
}

.top-count {
  font-size: 42rpx;
  font-weight: 600;
  margin-left: 5rpx;
  margin-right: 5rpx;
  color: #FFCF00;
}
.top-desc {
  margin-top: 29rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(255,207,0,1);
  line-height:26rpx;
}

.result-main {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 30rpx 80rpx 0 rgba(54, 11, 80, 0.08);
  border-radius: 42rpx 42rpx 0 0;
  position: absolute;
  left: 0;
  top: 447rpx;
}

.main-top {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: -65rpx;
}

.main-top .img-photo {
  width: 130rpx;
  height: 130rpx;
  overflow: hidden;
  border: 3rpx solid rgba(255, 255, 255, 1);
  border-radius: 50%;
}

.main-top .username {
  font-size: 36rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  margin-top: 30rpx;
}

.main-account {
  display: flex;
  justify-content: space-around;
  margin-top: 56rpx;
}

.main-account .text-huode {
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(102, 102, 102, 1);
  line-height: 24rpx;
}

.main-account .get-money {
  flex: 0 0 auto;
  padding-left: 40rpx;
}

.get-money .get-cash {
  font-size: 28rpx;
  color: rgba(255, 54, 87, 1);
  margin-top: 20rpx;
}

.main-account .shufenge {
  flex: 0 0 2rpx;
  height: 100rpx;
  background-color: #d8d8d8;
}

.get-cash span {
  font-size: 48rpx;
}

.get-coupon {
  flex: 0 0 auto;
  padding-right: 40rpx;
}

.get-coupon .get-quantity {
  font-size: 28rpx;
  color: rgba(255, 54, 87, 1);
  margin-top: 20rpx;
  font-weight: 400;
}

.get-quantity span {
  font-size: 48rpx;
  color: rgba(255, 54, 87, 1);
}

.get-coupon .total-amount {
  font-size: 22rpx;
  color: rgba(255, 54, 87, 1);
  margin-top: 6rpx;
  font-weight: 400;
}

.view-answer {
  background-color: #fff;
}

.view-answer .look-result {
  text-align: center;
  margin-top: 40rpx;
}

.look-result p {
  font-size: 36rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.look-result .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
  margin-top: 20rpx;
}
.goods-container {
  padding-bottom: 140rpx;
}

.good-list {
  display: flex;
  justify-content: space-around;
  flex-flow: row wrap;
  padding-bottom: 40rpx;
}

.good-item {
  flex: 0 0 320rpx;
  width: 320rpx;
  position: relative;
  margin-top: 40rpx;
}

.answer-tips {
  position: absolute;
  top: 220rpx;
  left: 20rpx;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  font-weight: 500;
}

.answer-tips.ok {
  top: 240rpx;
  left: 65rpx;
  width: 190rpx;
  height: 40rpx;
  background: rgba(95, 228, 177, 0.8);
  border-radius: 42rpx;
}

.answer-tips.ok .desc {
  margin-bottom: 0;
  line-height: 40rpx;
}

.answer-tips.error {
  width: 280rpx;
  height: 68rpx;
  background: rgba(255, 102, 102, 0.8);
  border-radius: 34rpx;
}

.answer-tips.error p:first-child {
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}

.cover {
  width: 320rpx;
  height: 320rpx;
  border-radius: 16rpx;
}

.trade-name {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.trade-price {
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(255, 102, 102, 1);
  line-height: 26rpx;
  margin-bottom: 16rpx;
}

.trade-price span {
  font-size: 16rpx;
}

.use-coupon {
  height: 24rpx;
  background: rgba(255, 102, 102, 1);
  border-radius: 4rpx;
  border: 1rpx solid rgba(255, 102, 102, 1);
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 24rpx;
  padding: 2rpx 5rpx;
}

.btn-buy {
  outline: 0;
  margin-top: 40rpx;
  width: 320rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 40rpx;
  border: 2rpx solid rgba(119, 59, 2, 1);
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(119, 59, 2, 1);
  line-height: 70rpx;
}

.foot-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  text-align: center;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #e9e9e9;
}
.foot-container .btn-back-home {
  width:90rpx;
  height:90rpx;
  margin-right: 30rpx;
  margin-left: 40rpx;
}
.foot-container .btn-back-home .icon-home {
  width:90rpx;
  height:90rpx;
}
.foot-container .btn-once-more {
  width: 260rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 45rpx;
  border: 2rpx solid rgba(119, 59, 2, 0.8);
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(119, 59, 2, 1);
  line-height: 90rpx;
  margin: 15rpx 20rpx 15rpx 0;
}

.foot-container .btn-ishow {
  width: 260rpx;
  height: 90rpx;
  background: rgba(255, 207, 0, 1);
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(119, 59, 2, 1);
  line-height: 90rpx;
}

.fx-modal--notice .invite-play {
  padding: 0 70rpx;
}

.fx-modal--notice .notice-title {
  margin-top: 115rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(247, 228, 255, 1);
  line-height: 42rpx;
  margin-bottom: 40rpx;
}

.fx-modal--notice .btn-ok {
  width: 450rpx;
  height: 80rpx;
  background: rgba(255, 207, 0, 1);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(119, 59, 2, 1);
  line-height: 80rpx;
}
.poster-box {
  width: 520rpx;
  height: 924rpx;
  margin: 0 auto;
  background-image: url('https://static.moebeast.com/static/img/lexi-logo-bg2.jpg');
  background-color: #f6f7fb;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 190rpx 80rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.poster-box .poster-image {
  width: 520rpx;
  height: 924rpx;
}
.poster-box .loading {
  width: 64rpx;
  height: 64rpx;
}
.btn-save {
  margin-top: 50rpx;
}