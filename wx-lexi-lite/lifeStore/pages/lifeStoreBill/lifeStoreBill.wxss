.withdraw-bills {

}
.withdraw-bills .withdraw-date {
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  padding: 16rpx 40rpx;

}
.withdraw-bills .withdraw-list {
  background-color: #fff;
}
.withdraw-bills .withdraw-list .withdraw-item {
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 40rpx 24rpx;
}
.withdraw-item .event {
  flex: 1;
  font-size: 28rpx;
  color: #999;
}
.withdraw-item .event .remark {
  display: block;
  color: #333;
}
.withdraw-item .subtotal {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.withdraw-item .subtotal .amount {
  font-weight: 600;
  font-size: 32rpx;
}
.withdraw-item .subtotal .status {
  font-size: 24rpx;
}
.withdraw-item .subtotal .status.yellow {
  color: #FB9013;
}
.withdraw-item .subtotal .status.red {
  color: #FF6666;
}
