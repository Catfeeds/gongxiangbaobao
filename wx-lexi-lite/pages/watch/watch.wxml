<!--pages/watch/watch.wxml 关注的人-->
<view class='container'>
    <!-- 添加页面加载 -->
    <image 
    src='../../images/jiazai.gif' 
    class="load-page__icon" 
    wx:if="{{isLoadPageShow}}"></image>


  <view class='time-top font-m relation-item' wx:for="{{peopleList}}" wx:key="{{index}}">
    <view 
      class='flex_row relation-avater' 
      data-uid="{{item.uid}}"
      catchtap="handleToPeopleTap">  
      <image src="{{item.avatar}}"></image>
      <text>{{item.username}}</text>
    </view>

    <view class='relation-icon'>
      <view 
        catchtap='hanleDeleteWatch' 
        data-uid="{{item.uid}}" 
        data-index="{{index}}"
        wx:if="{{item.followed_status==2&&myIndex!=index}}">互相关注
      </view>
      <view 
        catchtap='hanleDeleteWatch' 
        data-uid="{{item.uid}}" 
        data-index="{{index}}"
        wx:if="{{item.followed_status==1&&myIndex!=index}}">已关注
      </view>
      <view 
        data-uid="{{item.uid}}" 
        data-index="{{index}}"
        catchtap='hanleAddWatch' 
        class='relation-icon__add' 
        wx:if="{{item.followed_status==0&&myIndex!=index}}">+ 关注
      </view>
    </view>
  </view>
</view>

