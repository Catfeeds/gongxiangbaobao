/* pages/branderStoreList/branderStoreList.wxss */

.nav-bar {
  height: 100rpx;
  border-bottom: 1rpx slolid #e9e9e9;
  background-color: white;
  padding: 0 10rpx;
  font-weight: 500;
}

.nav-bar__text {
  width: 150rpx;
  height: 100%;
  color: #555;
}

.active {
  font-size: 48rpx;
  color: #5fe4b1;
}

.brand-store__info {
  padding: 30rpx 40rpx;
  background-color: white;
}

.brand-store__info .log {
  height: 120rpx;
  width: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.address-icon {
  width: 12rpx;
  height: 20rpx;
}

.address-icon + text {
  color: #b2b2b2;
}

.brand-store__info .depict {
  width: 400rpx;
}

 .brand-product__item{
  height: 280rpx;
  width: 280rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.big-photo{
  height: 750rpx;
  width: 750rpx;
}

.big-photo swiper{
  height: 100%;
}

.high-bottom{
  padding: 40rpx 0 90rpx 0;
}

.high-bottom__item {
  display: inline-block;
  width: 145rpx;
  margin-right: 30rpx;
}

.high-bottom__item image {
  height: 145rpx;
  width: 145rpx;
  border-radius: 8rpx;
  border: 1rpx soliid #e9e9e9;
}

.high-bottom__item view {
  text-align: center;
}

.high-bottom__scroll{
  white-space: nowrap;
  overflow: hidden;
  /* background-color: red; */
}

.margin-left--40rpx {
  margin-left: 40rpx;
}

.margin-right--40rpx {
  margin-right: 40rpx;
}

.border-bottom{
  border-bottom: 1rpx solid #e9e9e9;
}

[class="bg-white border-bottom"] {
  margin-bottom: 20rpx;
}

.quantity-box__style::before {
  content: " ";
  display:inline-block;
  width: 0rpx;
  font-size: 22rpx;
  visibility: hidden;
}