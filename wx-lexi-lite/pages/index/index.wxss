/**index.wxss**/

.sear-box {
  position: relative;
  height: 120rpx;
  /* border-top: 1rpx solid #e9e9e9; */
}

.sear-box>image {
  position: absolute;
  height: 100%;
  z-index: 0;
}

.search-box_text {
  z-index: 1;
}

.search-box_text>image {
  height: 30rpx;
  width: 30rpx;
  margin-left: 100rpx;
  margin-right: 20rpx;
}

.category-box {
  padding: 40rpx 0 20rpx 0;
  border-bottom: 1rpx solid #e9e9e9;
}

.category-box text {
  margin: 0 40rpx;
}

.pickCategory--style {
  font-size: 40rpx;
}

.owner-info_box {
  width: 670rpx;
  padding: 60rpx 40rpx;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  box-shadow: 0px 8px 15px 0px rgba(0, 0, 0, 0.1);
}
.owner-info-text_info{
  flex: 1;
}
.owner-info-text_info image{
  margin-right: 10rpx;
}
.owner-info_icon--style {
  height: 34rpx;
  width: 34rpx;
}

.owner-info_camera_icon {
  position: absolute;
  bottom: -17rpx;
  right: -17rpx;
}

.owner-avatar_box {
  width: 128rpx;
  height: 128rpx;
  position: relative;
  border-radius: 50%;
  margin-right: 30rpx;
}

.owner-avatar_box image:nth-child(1) {
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
}
.joinNumber {
  height: 160rpx;
  padding-top: 40rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.joinNumberBottom {
  display: flex;
  flex-direction: row;
}
.joinNumberl {
  width: 540rpx;
  /* box-shadow: -10rpx 0 0rpx #f3f3f3 inset; */
  display: flex;
  overflow: hidden;
}
.joinNumberlBox {
  display: flex;
  flex-direction: row-reverse;
}
.joinNumberlPhoto {
  border: 6rpx solid white;
  margin-right: -20rpx;
  overflow: hidden;
}
.joinNumberlPhoto image{
  height: 100%;
  width: 100%;
}
.middle_shadou{
  width: 40rpx;
  background:linear-gradient(to left,rgba(0, 0, 0, 0.1),rgba(0, 0, 0, 0));
}
.joinNumberR {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  background-color: black;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  margin-left: 20rpx;
}
