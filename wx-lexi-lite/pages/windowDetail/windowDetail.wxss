.bottom-comment {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background-color: #fff;
  width: 100%;
  z-index: 10;
}

.bottom-comment .comment-form {
  padding: 20rpx 40rpx;
  display: flex;
  border-top: 1rpx solid #e9e9e9;
  align-items: center;
}

.bottom-comment .comment-form .input-text {
  font-size: 24rpx;
  background-color: #fafafa;
  border-radius: 24rpx;
  padding: 12rpx 30rpx;
  margin-right: 30rpx;
}

.bottom-comment .comment-form .count {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.bottom-comment .comment-form .comment-count {
  flex: 1;
  font-size: 28rpx;
}

.bottom-comment .comment-form .icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.page-section .block-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 猜你喜欢 */

.comments, .suggestion, .similar-windows {
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #e9e9e9;
  margin-bottom: 20rpx;
}

.similar-windows>.block-title {
  font-size: 28rpx;
  font-weight: 600;
}

.similar-windows scroll-view {
  height: 600rpx;
}

.comments, .suggestion, .similar-windows scroll-view {
