/* pages/paymentAddress/paymentAddress.wxss */

page {
  background-color: #f7f9fb;
}

.shm {
  background-color: #f7f9fb;
}

.container {
}

.paymentList {
  height: 82rpx;
  display: flex;
  flex-direction: row;
  color: #999;
  justify-content: space-around;
  font-size: 26rpx;
  line-height: 82rpx;
  background-color: white;
}

.bottom-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  position: relative;
}

.bottom-line>view {
  height: 4rpx;
  position: absolute;
}

.linelast {
  width: 172rpx;
  background-color: #e9e9e9;
  /* border-bottom: 1rpx solid #c2c2c2; */
}

.line__last {
  left: 576rpx;
}

.line__first {
  left: 0rpx;
}

.round {
  left: 558rpx;
  height: 16rpx !important;
  width: 16rpx;
  border-radius: 50%;
  border: 2rpx solid #e9e9e9;
  background-color: white !important;
}

.middleline {
  width: 356rpx;
  left: 198rpx;
  background-color: #e9e9e9;
}

.lineGreen {
  background-color: #5fe4b1;
  border-color: #5fe4b1 !important;
  z-index: 99;
}

.radio-group {
  left: 500rpx;
  margin-top: 30rpx;
  background-color: white;
}

.radio {
  padding: 24rpx 30rpx 22rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* height: 150rpx; */
  border-bottom: 1rpx solid #f7f9fb;
}

.radio>view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}

radio {
  margin-right: 20rpx;
}

.green__round {
  left: 178rpx;
  z-index: 1;
}

.userName {
  font-size: 28rpx;
  font-weight: 500;
}

.userLocation {
  font-size: 24rpx;
  font-weight: 300;
}

.addNewAddrees {
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
  justify-content: space-between;
  font-size: 28rpx;
  align-items: center;
  background-color: white;
  height: 80rpx;
  margin-top: 20rpx;
  font-weight: 300;
}

.conservation {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.conservation button {
  height: 80rpx;
  width: 690rpx;
  background-color: #5fe4b1;
  color: white;
  font-size: 32rpx;
  border: 0rpx;
}

.margin--20rpx {
  margin-top: 10rpx;
}
.margin--18rpx {
  margin-top: 8rpx;
}

