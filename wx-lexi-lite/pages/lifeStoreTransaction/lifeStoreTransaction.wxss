.store-income__wrapper {
  background-color: #fff;
  z-index: 99;
}
.store-income {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(#2785FA, #539EFB);
  border-radius:8px;
  box-shadow:0px 8px 15px 0px rgba(0,0,0,0.1);
  margin: 20rpx 40rpx 40rpx;
  position: relative;
}
.store-income .icon-eye {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  z-index: 10;
}
.store-income .unit {
  font-size: 24rpx;
  margin-left: 10rpx;
}
.store-income .amount {
  font-size: 48rpx;
  margin: 30rpx 0;
  font-weight: 600;
}
.store-income .foot {
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  padding-top: 38rpx;
}
.store-income .foot .today-income {
  flex: 1;
  font-size: 24rpx;
  text-align: center;
}
.store-income .foot .today-income.settlement {
  border-left: 1rpx solid rgba(233,233,233,1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.store-income .foot .today-income.settlement .icon-info {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.transactions {
  background-color: #fff;
  color: #333;
}
.transactions .block-title {
  font-size: 28rpx;
  font-weight: 600;
  padding: 28rpx 40rpx;
}
.transactions .choose-date {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  color: #959FA7;
  font-size: 28rpx;
}
.transactions .choose-date .dropdown {
  margin-right: 30rpx;
  border: 1rpx solid #e9e9e9;
  border-radius: 8rpx;
  padding: 5rpx 15rpx;
  display: flex;
  align-items: center;
}
.transactions .choose-date .dropdown .icon-arrow-down {
  flex: 0 0 auto;
  width: 12rpx;
  height: 10rpx;
  margin-left: 20rpx;
}
.transactions .choose-date .date {
  margin-right: 30rpx;
}
.transactions .choose-date .date.active {
  color: #5FE4B1;
}
.transactions .trade-status {
  border: 1rpx solid #5FE4B1;
  padding: 0 20rpx;
  margin: 30rpx 40rpx 20rpx;
  border-radius: 37rpx;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  color: #555;
}
.transactions .trade-status label {
  padding: 22rpx 0;
  position: relative;
}
.transactions .trade-status label.active {
  color: #5FE4B1;
}
.transactions .trade-status label .badge {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 7rpx;
  right: -26rpx;
  z-index: 99;
  background-color: #ff6666;
  text-align: center;
  border-radius: 32rpx;
  color: #fff;
  font-size: 22rpx;
}

.transactions .trade-list {
  border-top: 1rpx solid #e9e9e9;
  font-size: 28rpx;
}
.transactions .trade-list .trade-item {
  border-bottom: 1rpx solid #e9e9e9;
  padding: 30rpx 40rpx 20rpx;
  display: flex;
}
.transactions .trade-list .trade-item .trade-order {
  flex: 1;
}
.transactions .trade-list .trade-item .trade-order .order-sn {
  display: block;
}
.transactions .trade-list .trade-item .trade-order .order-date {
  color: #999;
}
.transactions .trade-list .trade-item .trade-income {
  flex: 0 0 auto;
  text-align: center;
}
.transactions .trade-list .trade-item .trade-income .amount {
  font-weight: 600;
  font-size: 28rpx;
  display: block;
}
.transactions .trade-list .trade-item .trade-income .status {
  font-size: 22rpx;
  color: #B2B2B2;
}
.transactions .trade-list .trade-item .trade-income .success {
  color: #5FE4B1;
}
.transactions .trade-list .trade-item .trade-income .pending {
  color: #FB880C;
}

.modal-body {
  font-size: 24rpx;
  margin-top: 50rpx;
}