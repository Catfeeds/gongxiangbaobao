/* pages/gatherInfo/gatherInfo.wxss */
@import "../user/user.wxss";

.container {
  height: auto;
}

.gather-hander__photo {
  position: relative;
  width: 750rpx;
  height: 400rpx;
  overflow: hidden;
  color: white;
}

.gather-info {
  position: absolute;
  left: 40rpx;
  bottom: 20rpx;
  z-index: 9;
}
.gather-info .gather-hander__text--big {
  font-size: 48rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.gather-info .gather-hander__text--desc {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

gather-info .gather-hander__text--min {
  font-weight: 400;
}

.bg-black__half {
  height: 50%;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0rpx !important;
  background: linear-gradient(to top,rgba(0, 0, 0, .5) ,rgba(255, 255, 255, 0)) !important;
}