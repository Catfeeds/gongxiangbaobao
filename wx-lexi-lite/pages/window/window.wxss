/* 头图 */

.fx-window {
  border: none;
}

.fx-window__images {
  position: relative;
}

.window-title__name {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 254rpx;
  background: linear-gradient(0deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 100%);
  z-index: 2;
}

.window-title__text {
  position: absolute;
  bottom: 40rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
