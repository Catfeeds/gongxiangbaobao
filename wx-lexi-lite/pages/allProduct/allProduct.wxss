/* pages/allProduct/allProduct.wxss */
@import "../user/user.wxss";

.top-bg__photo {
  height: 320rpx;
  width: 750rpx;
  position: relative;
}

.top-bg__photo .shade, .top-bg__photo .top__bg image, .top-bg__photo .top__bg {
  height: 100%;
  width: 100%;
}

.shade {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.top-bg__photo .browse-record__box {
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  transform: translate(-50%, 50%);
  z-index: 6;
  width: 610rpx;
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx 40rpx;
  box-shadow: 0rpx 5rpx 10rpx 0rpx rgba(0, 0, 0, 0.08);
}

.browse-record__box .black-font {
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 24rpx;
  color: rgba(85, 85, 85, 1);
}

.top-bg__photo .browse-record__box .open-data,
.top-bg__photo .browse-record__box image, .browse-record__box .round {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.top-bg__photo .browse-record__box .open-data,
.top-bg__photo .browse-record__box image {
  border: 3rpx solid white;
  box-sizing: border-box;
  margin-right: -15rpx;
}

.browse-item__photo {
  flex: 1;
  flex-direction: row-reverse;
}

.browse-record__box .round {
  background-color: black;
  color: white;
  flex: 0 0 auto;
}

