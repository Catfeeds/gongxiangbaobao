}

.margin-bottom--40rpx {
  margin-bottom: 40rpx;
}

.margin-bottom--10rpx {
  margin-bottom: 10rpx;
}

.margin-top--8rpx {
  margin-top: 8rpx;
}

.margin-bottom--36rpx {
  margin-bottom: 36rpx;
}

