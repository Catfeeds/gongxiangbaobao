.find-swiper__round .swiperActive {
  background-color: rgba(255, 255, 255, 1);
}

.find-swiper__round view {
  height: 14rpx;
  width: 14rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  margin-right: 18rpx;
}

.color--huilv {
  color: #75ab9a;
}

.color--huihong {
  color: #e3b395;
}

.color--huilan {
