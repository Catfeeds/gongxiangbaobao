/* pages/find/find.wxss */
@import "../index/index.wxss";

.container {
  background-color: white;
}

.find-swiper {
  height: 360rpx;
  width: 670rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 20rpx 40rpx;
  background-color: red;
}

.category-title__min {
  color: #555;
}

.live-records__box{
  white-space: nowrap;
  overflow: auto;
  border-bottom: 1rpx solid #e9e9e9;
  padding-bottom: 32rpx;
}

.live-records {
  display: inline-block;
  width: 210rpx;
  margin-right: 20rpx;
}

.live-records image {
  height: 210rpx;
  width: 210rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}


.margin-left--40rpx {
  margin-left: 40rpx;
}

.margin-right--40rpx {
  margin-right: 40rpx;
}
.margin-bottom--34rpx{
  margin-bottom: 34rpx;
}
.margin-bottom--10rpx{
  margin-bottom: 10rpx;
}
.margin-bottom--36rpx{
  margin-bottom: 36rpx;
}
