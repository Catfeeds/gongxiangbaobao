/* pages/find/find.wxss */
@import "../index/index.wxss";

.container {
  background-color: white;
}

.find-swiper {
  position: relative;
  height: 360rpx;
  width: 670rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 20rpx 40rpx;
  /* background-color: red; */
  margin-bottom: 60rpx;
}

.find-swiper swiper {
  height: 100%;
}

.find-swiper image {
  border-radius: 8rpx;
  height: 100%;
  width: 100%;
}

.find-swiper__round {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

.category-title__big {
  margin-bottom: 20rpx;
}

.category-title__min {
  color: #555;
  margin-bottom: 40rpx;
}

.live-records__box {
  height: 300rpx;
  white-space: nowrap;
  overflow: auto;
  border-bottom: 1rpx solid #e9e9e9;
  padding-bottom: 32rpx;
}

.live-records {
  display: inline-block;
  width: 210rpx;
  margin-right: 20rpx;
}

.live-records image {
  height: 210rpx;
  width: 210rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.category__title {
  margin-top: 60rpx;
}

.margin-left--40rpx {
  margin-left: 40rpx;
}

.margin-right--40rpx {
  margin-right: 40rpx;
}

.margin-bottom--34rpx {
