}

.store-info__box {
  padding: 30rpx;
  border: 1rpx solid #e9e9e9;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.store-info__box .store-icon {
  height: 120rpx;
  width: 120rpx;
  margin-right: 20rpx;
}

