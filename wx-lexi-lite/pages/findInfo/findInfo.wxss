/* pages/findInfo/findInfo.wxss */

@import "../index/index.wxss";

.container {
  background:rgba(247,249,251,1);
}

.top-photo {
  height: 420rpx;
  overflow: hidden;
}

.browse-quantity__icon {
  height: 18rpx;
  width: 28rpx;
}

.store-logo {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
}

.store-info__box {
  padding: 30rpx;
  border: 1rpx solid #e9e9e9;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.store-info__box .store-icon {
  height: 120rpx;
  width: 120rpx;
  margin-right: 20rpx;
}

.store-info__box .follow-btn {
  background-color: #5FE4B1;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  color: white;
  /* margin-bottom: 40rpx; */
}

.store-info__box .follow-btn image {
  width: 28rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.comment-item {
  padding: 40rpx 40rpx 0 40rpx;
}

.comment-item__item{
  display: flex;
  flex-direction: row;
}
.comment-item__item>view{
  flex: 1;
}

.comment-photo{
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}












































