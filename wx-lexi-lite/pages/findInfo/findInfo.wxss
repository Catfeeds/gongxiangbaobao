}

.quantity-color {
  color: #f66;
}

.reply-text__box {
  background: rgba(245, 247, 249, 1);
  border-radius: 8rpx;
  padding: 12rpx 20rpx 14rpx;
  color: #555;
}

.all-quantity__btn {
  height: 80rpx;
  color: #666;
  border-top: 1rpx solid #e9e9e9;
  border-bottom: 1rpx solid #e9e9e9;
}

.bottom-comment__input {
  height: 100rpx;
  padding: 0 40rpx;
