.comment-item {
  padding: 40rpx 40rpx 0 40rpx;
}

.comment-item__item {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
}

.comment-item__item>view {
  flex: 1;
}

.comment-photo {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.zan-icon {
  height: 26rpx;
