}

.bottom-comment__input image {
  height: 40rpx;
  width: 44rpx;
  margin-right: 10rpx;
}

.comment__input {
  height: 66rpx;
  width: 290rpx;
  margin-right: 10rpx;
}

.comment__input input {
  background: rgba(245, 247, 249, 1);
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 100%;
}

.input-placeholder {
  font-size: 26rpx;
  color: #999;
}

.info-title {
  line-height: 50rpx;
  margin-bottom: 16rpx;
}

.follow-owner__btn {
  width: 114rpx;
  height: 50rpx;
  border-radius: 30rpx;
  color: white;
