/* pages/demo/demo.wxss */

.progress-box {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}
.progress-box .progress-bg {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
}
.progress-box .progress-canvas {
  width: 80rpx;
  height: 80rpx;
}
.progress-box .show-text {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  font-size: 32rpx;
  color: #FFCF00;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  z-index: 100;
}