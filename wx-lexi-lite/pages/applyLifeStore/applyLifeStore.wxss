.fx-input {
  border: 1rpx solid #e9e9e9;
  font-size: 28rpx;
  color: #b2b2b2;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  padding: 29rpx 20rpx 29rpx 30rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
}

.apply-container {
  position: relative;
  background-image: url('https://static.moebeast.com/image/static/apply-headimg@2.png');
  background-size: auto 452rpx;
  background-repeat: no-repeat;
  background-color: #fff;
}
.apply-jumbotron {
  width: 100%;
  text-align: center;
  color: #fff;
}
.apply-jumbotron .logo {
  width: 90rpx;
  height: 102rpx;
  margin-top: 80rpx;
  margin-bottom: 6rpx;
}
.apply-jumbotron .name {
  margin-bottom: 14rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.apply-jumbotron .sologn {
  margin-bottom: 76rpx;
  font-size: 28rpx;
}

.apply-form-wrapper {
  background-color: #fff;
  margin: 0rpx 40rpx 116rpx;
  padding-top: 40rpx;
  border-radius: 8rpx;
  box-shadow: 0px 3px 8px 0px rgba(0, 0, 0, 0.1);
}
.apply-form {
  padding: 40rpx 0rpx;
  background-color: #fff;
}
.apply-form .btn-area {
  padding: 80rpx 30rpx 40rpx;
}

.fx-input.verify-mobile {
  display: flex;
  align-items: center;
}
.fx-input.verify-mobile .areacode {
  flex: 0 0 auto;
  padding-right: 20rpx;
  color: #333;
}
.fx-input.verify-mobile .line {
  width: 1rpx;
  background-color: #e9e9e9;
  height: 68rpx;
}
.fx-input.verify-mobile .input-inner {
  flex: 1;
  display: inline-flex;
  padding-left: 20rpx;
}
.fx-input.verify-mobile .fetch-verify-code {
  flex: 0 0 auto;
  display: inline-flex;
  font-size: 22rpx;
  border: 1rpx solid #999;
  color: #999;
  border-radius: 22rpx;
  padding: 13rpx 26rpx;
}

/* 申请结果 */
.apply-result {
  background-color: #fff;
  padding: 128rpx 40rpx 0rpx;
  text-align: center;
}
.apply-result .success {
  background-image: url('https://static.moebeast.com/image/static/icon-flower@2x.png');
  background-size: 100% 90rpx;
  background-position: center center;
  font-size: 40rpx;
  color: #d2aa7a;
  margin-bottom: 40rpx;
  font-weight: 600;
  text-align: center;
}
.apply-result .you {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  text-align: center;
  margin-bottom: 20rpx;
}
.apply-result .role {
  background-color: #2785fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 28rpx;
  padding: 10rpx 20rpx;
}
.apply-result .summary {
  font-size: 28rpx;
  color: #666;
  text-align: left;
  margin-top: 90rpx;
  margin-bottom: 40rpx;
}
.apply-result .follow {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 180rpx;
  text-align: left;
}
.apply-result .follow text {
  color: #5fe4b1;
}