/* pages/lifeStoreManage/lifeStoreManage.wxss */
@import "../distributes/distributes.wxss";
.store-owner__wrapper {
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  height: 302rpx;
}
.store-owner__wrapper .blur {
  background-image: url('https://static.moebeast.com/20180817/0615FrUvfqbyfnc-lnOdommJAqHw1Oh3.jpeg');
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: center center;
  -webkit-filter: blur(20px); /* Chrome, Opera */
  -moz-filter: blur(20px);
  -ms-filter: blur(20px);
  filter: blur(20px);
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}
.store-owner__wrapper .mask {
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 9;
}
.store-owner-container {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 10;
  padding: 40rpx;
}
.store-owner {
  display: flex;

}
.store-owner .avatar {
  width: 120rpx;
  height: 120rpx;
  flex: 0 0 auto;
  border-radius: 8rpx;
}
.store-owner .store-content {
  flex: 1;
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #fff;
}
.store-owner .store-content .title {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  margin-top: 18rpx;
}
.store-owner .store-content .title .icon-store {
  width: 32rpx;
  height: 33rpx;
  margin-right: 10rpx;
}
.store-owner .store-content .title .status-label {
  background-color: #2785FA;
  border-radius: 18rpx;
  font-size: 22rpx;
  color: #fff;
  padding: 2rpx 10rpx;
  margin-left: 10rpx;
}
.store-owner .store-content .owner-uid {
  font-size: 24rpx;
  color: #B2B2B2;
}

.practice-timer {
  margin-top: 36rpx;
  font-size: 22rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
.practice-timer .number {
  flex: 0 0 auto;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  padding: 11rpx 10rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}
.practice-timer .unit {
  font-size: 18rpx;
}
.practice-timer .number.day,
.practice-timer .unit.day {
  color: #5FE4B1;
}

.store-income__wrapper {
  background-color: #fff;
  z-index: 99;
}
.store-income {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(#2785FA, #539EFB);
  border-radius: 8px;
  box-shadow: 0px 8px 15px 0px rgba(0,0,0,0.1);
  margin: -40rpx 40rpx 40rpx;
  position: relative;
}
.store-income .icon-eye {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  z-index: 10;
}
.store-income .unit {
  font-size: 24rpx;
  margin-left: 10rpx;
}
.store-income .amount {
  font-size: 48rpx;
  margin: 30rpx 0;
  font-weight: 600;
}
.store-income .foot {
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  padding-top: 38rpx;
}
.store-income .foot .today-income {
  flex: 1;
  font-size: 24rpx;
  text-align: center;
}
.store-income .foot .today-income.settlement {
  border-left: 1rpx solid rgba(233,233,233,1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.store-income .foot .today-income.settlement .icon-info {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.store-dashboard {
  padding: 32rpx 0;
  margin: 0 40rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #E9E9E9; 
}
.store-dashboard .title {
  position: relative;
}
.store-dashboard .title text {
  color: #999;
  font-size: 24rpx;
}
.store-dashboard .title .icon-eye {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0rpx;
  top: 5rpx;
  z-index: 10;
}
.store-dashboard .count {
  font-size: 40rpx;
  color: #333;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
  font-weight: 600;
  display: inline-block;
}
.store-dashboard .label-count {
  font-size: 24rpx;
  color: #333;
}
.store-dashboard .label-count text {
  font-weight: 600;
}
.store-dashboard .order-total-count {
  flex: 50%;
}
.store-dashboard .order-total-amount {
  border-left: 1rpx solid #E9E9E9;
  flex: 50%;
  padding-left: 20rpx;
}
.store-dashboard .order-total-amount .count {
  color: #FF6666;
}
.store-dashboard .label-count .yellow {
  color: #FF9F22;
}

.store-helper__wrapper {
  border-top: 1rpx solid #E9E9E9;
  border-bottom: 1rpx solid #E9E9E9;
  padding: 30rpx 40rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.store-helper {
  border: 4rpx dashed #E9E9E9;
  border-radius: 8rpx;
  padding: 30rpx;
  font-size: 26rpx;
}
.store-helper .title {
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.store-helper .item {
  color: #555;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  padding-left: 0rpx; 
}
.store-helper .item::before {
  content: ' ';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  margin: -10rpx 0rpx 0 0rpx;
  background-color: #5FE4B1;
}
.store-helper .follow {
  background :rgba(251,136,12, 0.2);
  border-radius: 27px;
  font-size: 22rpx;
  color: #333;
  padding: 16rpx 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.store-helper .follow i {
  font-size: 22rpx;
  margin-right: 10rpx;
}

.store-phone {
  font-size: 32rpx;
  color: #5FE4B1;
  border-radius: 10rpx;
  box-shadow: 6rpx 0 15rpx rgba(0,0,0,0.1);
  background-color: #fff;
  margin: 40rpx 40rpx 80rpx;
  padding: 30rpx 0;
  text-align: center;
}
.lifestore-qrcode {
  width: 460rpx;
  height: 568rpx;
  margin-bottom: 60rpx;
}
.modal-body {
  font-size: 24rpx;
  margin-top: 50rpx;
}