/* pages/branderStore/branderStore.wxss */
@import "../user/user.wxss";
@import '../couponTemplate/couponTemplate.wxss';
@import '../find/find.wxss';

.container {
  height: auto;
  /* display: initial; */
  background-color: white;
}

.store-info {
  padding: 40rpx 40rpx 30rpx 40rpx;
  box-shadow: 0px 15px 24px 0px rgba(0, 0, 0, 0.1);
}

.store-info .top-photo__box>image {
  height: 140rpx;
  width: 140rpx;
  border-radius: 8rpx;
  margin-right: 55rpx;
}

.store-info .category__item {
  padding: 0 40rpx;
  font-size: 40rpx;
  color: #949ea6;
}

.store-icon {
  height: 32rpx;
  width: 32rpx;
  margin: 0 10rpx;
}

.agree-icon {
  width: 118rpx;
  height: 36rpx;
}

.store-info .address {
  color: #949ea6;
}

.follow .follow-btn {
  padding: 17rpx 48rpx 17rpx 36rpx;
  background-color: #5fe4b1;
  color: white;
  margin-right: 30rpx;
}

.follow .dlete-follow {
  background-color: #f5f7f9;
  color: #333;
}

.store-info .address image {
  width: 20rpx;
  height: 20rpx;
}

.follow .follow-btn image {
  width: 28rpx;
  height: 24rpx;
}

.follow .about {
  padding: 12rpx 20rpx;
  background-color: #f5f7f9;
  font-size: 28rpx;
}

.coupon-box {
  background-color: #fbf7f3;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 50rpx;
}

.coupon-message {
  font-size: 24rpx;
  color: #555;
}

.coupon-message>view {
  margin: 10rpx 0;
}

.coupon-message .coupon-icon image {
  height: 30rpx;
  width: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.coupon-message .get-btn {
  width: 90rpx;
  height: 54rpx;
  border-radius: 30rpx;
  border: 1rpx solid #dadada;
  line-height: 54rpx;
  text-align: center;
}

.coupon-message .reduced-price {
  position: relative;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: middle;
}

.coupon-message .reduced-price image {
  height: 30rpx;
  width: 30rpx;
  vertical-align: middle;
}

.coupon-message .reduced-price text {
  vertical-align: middle;
  margin-left: 10rpx;
}

.coupon-message .get-btn {
  width: 90rpx;
  height: 54rpx;
  border-radius: 30rpx;
  border: 1rpx solid #dadada;
  line-height: 54rpx;
  text-align: center;
}

.reduced-price_text {
  line-height: 40rpx !important;
}

.reduced-price__last {
  width: 160rpx;
  height: 30rpx;
  padding-left: 10rpx;
  background-color: #fbf7f3;
  position: absolute;
  right: 0;
  top: 2rpx;
}

.announcement-coupon {
  padding: 40rpx 40rpx 0rpx;
}

.notice {
  position: relative;
}

.notice-box {
  padding: 40rpx 30rpx;
  border: 1rpx solid #e9e9e9;
  border-radius: 10rpx;
  position: relative;
  font-size: 26rpx;
  color: #999;
}

.notice-box>view {
  overflow: hidden;
}

.notice-title {
  width: 130rpx;
  font-size: 22rpx;
  font-weight: 700;
  position: absolute;
  top: -16rpx;
  left: 80rpx;
  z-index: 9;
  text-align: center;
}

.notice-info {
  position: absolute;
  font-size: 24rpx;
  right: 32rpx;
  bottom: 42rpx;
  background-color: white;
}

.announcement-coupon .off-announcement {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e9e9e9;
  padding-bottom: 22rpx;
  margin-bottom: 24rpx;
}

.announcement-detail__box .round, .announcement-coupon .off-announcement .round {
  height: 10rpx;
  width: 10rpx;
  background-color: white;
  border-radius: 50%;
  margin-right: 5rpx;
}

.off-announcement .off-announcement__icon {
  width: 104rpx;
  height: 36rpx;
  color: white;
  margin-right: 30rpx;
  background-color: #fea100;
}

.off-announcement .off-time {
  color: #555;
}

.off-announcement .open-time {
  color: #fea100;
  margin-top: 10rpx;
}

.announcement-detail__box {
  position: fixed;
  top: 10000rpx;
  left: 0;
  padding: 30rpx 40rpx;
  height: 100%;
  width: 670rpx;
  background-color: white;
  z-index: 9;
}

.announcement-off__btn {
  position: absolute;
  bottom: 0;
  width: 690rpx;
  height: 270rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
  font-size: 50rpx;
}

.announcement-off__btn .announcement-off__icon {
}

.announcement-off__btn image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  height: 34rpx;
  width: 34rpx;
}

.pick-box {
  position: fixed;
  top: 10000rpx;
  left: 0;
  height: 100%;
  width: 750rpx;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.5);
}

.price-range {
  position: relative;
  padding: 20rpx 40rpx 0;
  background-color: #fff;
}

.shim {
  height: 270rpx;
}

.active {
  color: #5fe4b1 !important;
}

