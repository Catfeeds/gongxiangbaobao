.page-section {
  padding-top: 20rpx; 
  background-color: #fff;
}

/* 搜索框 */
.search-box {
  padding: 0rpx 40rpx;
  background-color: #fff;
}
.search-box__text {
  font-size: 24rpx;
  position: relative;
}
.search-box__text .icon {
  width: 29rpx;
  height: 29rpx;
  position: absolute;
  left: 33rpx;
  top: 34rpx;
  z-index: 9;
}
.search-box__text .search-input {
  background-color: rgba(246,245,245,1);
  padding: 24rpx 20rpx 20rpx 83rpx;
  border-radius: 50rpx;
  color: #555555;
}

.page-section.fx-tabs {
  padding-top: 24rpx;
}


.distribute-swiper {
  width: 100%;
  height: 360rpx;
}
.distribute-swiper .swiper-item {
  width: 580rpx;
  height: 360rpx;
  margin: 0 auto;
}

.distribute-swiper .swiper-item image{
  height: 218rpx;
  width: 452rpx;
}
.swiperActive{
  transform: scale(1.3,1.28);
  transition: all 0.5s ease 0s;
}
.transtion-right{
  transform: translateX(62rpx);
  transition: all 0.5s ease 0.1s;
}

.transtion-left{
  transform: translateX(-64rpx);
  transition: all 0.5s ease 0.1s;
}

.open-more {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  padding: 28rpx 0rpx;
  border-bottom: 1rpx solid #E9E9E9;
}

/* 筛选器 */
.fx-filter {
  display: flex;
  justify-content: space-between;
  padding: 0rpx 40rpx;
  border-bottom: 1rpx solid #E9E9E9;
}
.fx-filter .filter-item {
  flex: 0 0 auto;
  padding: 26rpx 20rpx 28rpx 20rpx;
  display: flex;
  align-items: center; 
}
.fx-filter .filter-item:last-child {
  padding-right: 37rpx;
}
.fx-filter .filter-item text {
  font-size: 28rpx;
  color: #555555;
  margin-right: 10rpx;
}
.fx-filter .filter-item .icon-arrow-down {
  width: 12rpx;
  height: 10rpx;
}


.fx-distribute-cards {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 0rpx 40rpx;
}

.distribute-card {
  display: flex;
  flex-direction: column;
  padding-top: 22rpx;
}
.distribute-card .distribute-card__cover {
  position: relative;
}
.distribute-card .distribute-card__cover .image {
  width: 326rpx;
  height: 326rpx;
  border-radius: 8rpx;
}
.distribute-card .distribute-card__cover .icon-sold-out {
  position: absolute;
  left: 11rpx;
  top: 11rpx;
  width: 62rpx;
  height: 36rpx;
}
.distribute-card .distribute-card__body .title {
  font-size: 24rpx;
  color: #333333;
  margin-bottom: 9rpx;
}
.distribute-card .distribute-card__body .title.icon-free {
  background-image: url("https://kg.erp.taihuoniao.com/image/static/icon-free.png");
  background-repeat: no-repeat; 
  background-size: 40rpx 24rpx;
  background-position: left 6rpx;
  text-indent: 48rpx;
}
.distribute-card .distribute-card__body .price-box {
  margin-bottom: 17rpx; 
}
.distribute-card .distribute-card__body .price-box .sale-price {
  font-size: 24rpx;
  color: #333333;
}
.distribute-card .distribute-card__body .price-box .price {
  color: #999999;
  font-size: 22rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.distribute-card .distribute-card__body .price-box .love {
  font-size: 22rpx;
  margin-left: 24rpx;
  color: #999999;
}
.distribute-card .distribute-card__body .income {
  font-size: 24rpx;
  color: #FF6666;
}
.distribute-card .distribute-card__body .income text {
  font-weight: bold;
  font-size: 26rpx;
}
.distribute-card .distribute-card__actions {
  padding-top: 18rpx;
}
.distribute-card .distribute-card__actions .fx-mini-btn {
  margin-right: 20rpx;
}

.ending {
  font-size: 24rpx;
  color: #b2b2b2;
  padding: 39rpx 0rpx 52rpx;
  text-align: center;
  margin-top: 40rpx;
}