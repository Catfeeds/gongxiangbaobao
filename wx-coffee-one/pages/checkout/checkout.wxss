/* pages/checkout/checkout.wxss */
.get-goods-road{
  height: 90rpx;
  font-size: 34rpx;
  color: #666666;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 2rpx solid  rgba(204, 204, 204, 0.2);
  border-bottom:  2rpx solid  rgba(204, 204, 204, 0.2);
  background-color: white;
}
.get-goods-road>view{
  height: 90rpx;
  line-height: 90rpx;
}
.get-goods-roadtext{
  color: #8C5A50;
  border-bottom: 2rpx solid #8C5A50;
  box-sizing: border-box;
}
.page-checkout {
  font-size: 28rpx;
}
/* .order-address{
 border-bottom:1rpx solid rgba(204, 204, 204, 0.2)
} */
.content-line{
  border:none;
  font-size: 30rpx;
}
.order-address .action {
    font-size:  30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between !important;
}
.express-date {
  line-height: 80rpx;
  width: 100%;
}
.express-date .picker {
  display: flex;
  justify-content: space-between;
}
.express-date .picker text {
  flex: 1;
  text-align: right;
}
.order-remark {
  background: #ffffff;
  padding: 20rpx 32rpx;
  display: flex;
  flex-direction: column;
  height: 250rpx;
}
.order-remark .content {
  flex: 1;
  font-size: 24rpx;
  background: #f1f1f1;
  margin-top: 20rpx;
  min-height: 60rpx; 
  padding: 15rpx;
  width: auto;
}
.order-remark .content-placeholder {
  color: #ccc;
  font-size: 24rpx;
}
.fx-block.coupon {
  background: #fff;
  padding: 20rpx 32rpx;
  margin-top: 20rpx;
}
.fx-block.coupon .tips {
  font-size: 22rpx;
  color: #9c9c9c;
}
.fx-block.coupon .xname {
  color: #8C5A50;
}
.order-check-panel {
  padding: 0 0rpx;
}

.fx-coupon-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 50%;
  background: #fff;
  font-size: 28rpx;
}
.fx-coupon {
  display: flex;
  margin: 20rpx 32rpx;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(204, 204, 204, 0.2);
}
.fx-coupon__amount {
  margin-left: 15rpx;
  flex: 0 0 90rpx;
  color: #8C5A50;
}
.fx-coupon__amount .currency {
  font-size: 28rpx;
}
.fx-coupon__amount .amount {
  font-size: 48rpx;
  line-height: 100rpx;
}
.fx-coupon__info {
  flex: 1;
  font-size: 30rpx;
 
  text-align: left;
}
.fx-coupon__info .rule {
  color: #222;
  line-height: 60rpx;
  font-size: 32rpx;
}
.fx-coupon__info .expired {
  color: #6b6b6b;
}
.fx-coupon__action {
  flex: 0 0 50rpx;
  padding: 30rpx 0;
  text-align: center;

}
.fx-coupon__action .status.checked {
  color: #8C5A50;
}
.fx-coupon__empty {
  text-align: center;
  margin: 50rpx auto;
}
.action-time{
  color: #8C5A50;
}
.fx-block-style-other{
  padding: 0 !important;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.fx-block-style{
  height: 88rpx;
  background-color: white;
  margin: 0 !important;
  padding: 0 32rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}
.fx-panel__body-line{
  border-top: 2rpx solid rgba(204 ,204, 204, 0.15);
    border-bottom: 2rpx solid rgba(204 ,204, 204, 0.15);
}
.fx-block-style-line{
   border-bottom: 2rpx solid rgba(204 ,204, 204, 0.15);
}
.font-setLocation{
  color: #222222 !important;
  font-size: 30rpx;
}
.distance-shop{
  font-size: 28rpx;
  color: #666666;
}
.map{
  display: inline-block;
  height: 40rpx;
  width: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  border:2rpx solid #8C5A50;
  color: #8C5A50;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.distance-map-box{
  width: 690rpx;
  display: flex;
  flex-direction: row;


}
.content-line-none{
  border: 0 !important;
}
.info-left{
  margin: 0 !important;
}
.fx-address-bottom{
  margin: 0;
  border-bottom: 2rpx solid rgba(204 ,204, 204, 0.15);
}