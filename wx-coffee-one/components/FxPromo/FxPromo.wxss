/* components/FxProduct/FxProduct.wxss */
.fx-promo {
  height: 100%;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.fx-promo__image {
  flex: 1;
  font-size: 0;
  position: relative;
  overflow: hidden;
}
.fx-promo__image .cover { /* 扶뒬못02 */
  width: 100%;
  height: 200rpx;
}
.fx-promo__image .cover { /* 扶뒬못04 */
  width: 100%;
  height: 260rpx;
}
.fx-promo__title{
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  transform: rotate(-45deg);
  font-size: 26rpx;
  color: #8C5A50;
  background-image: linear-gradient(-225deg, #F7E9CF 4%, #FAF0DE 48%, #F7E9CF 96%);
  border: 2rpx solid #F2DAAD;
  text-align: center;
  position: absolute;
  top: 8rpx;
  left: -118rpx;
}