.ct-item-l {
  flex: 3;
  height: 100%;
}

.ct-item-r {
  flex: 1;
  background-color: #d5b699;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  color: white;
  font-size: 28rpx;
  border-style: none;
}

.ct-item-r button {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0;
}

.ct-line {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  height: 75rpx;
  width: 20rpx;
  border-radius: 30rpx;
  background-color: white;
  z-index: 99;
}

.ct-line-l {
  right: -10rpx;
  /* box-shadow: 0rpx 0 20rpx 1rpx rgba(0,0,0, 0.2) inset;  */
  box-shadow: 20rpx 0 5rpx 1rpx RGB(225, 225, 225) inset;
}

.ct-line-r {
  left: -10rpx !important;
  box-shadow: 20rpx 0 5rpx 1rpx RGB(225, 222, 222) inset;
}

.ct-price {
  flex: 145;
  display: flex;
  flex-direction: row;
  /* justify-content: flex-end; */
}

.ce-price-r {
  flex: 740;
}

.ct-price-icon {
  font-size: 26rpx;
  color: #999;
  margin-left: 30rpx;
}

.ct-time {
  font-size: 22rpx;
  color: #b2b2b2;
  margin-left: 30rpx;
}

.ct-round {
  position: absolute;
  left: 50%;
  height: 10rpx;
  width: 10rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.1);
}

.ct-round-top {
  top: -4rpx;
}

.ct-round-bom {
  bottom: -4rpx;
}

.ct-price--red {
  color: #ff6934;
}

.ce-green {
  color: #5fe4b1;
}

