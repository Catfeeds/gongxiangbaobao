/* pages/paymentAddress/paymentAddress.wxss */

.container {
}

.paymentList {
  height: 82rpx;
  display: flex;
  flex-direction: row;
  color: #999;
  justify-content: space-around;
  font-size: 26rpx;
  line-height: 82rpx;
  background-color: white;
}

.bottom-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}

.bottom-line>view {
  height: 4rpx;
}

.linelast {
  flex: 1;
  background-color: #e9e9e9;
}

.round {
  height: 16rpx !important;
  width: 16rpx;
  border-radius: 50%;
  border: 2rpx solid #e9e9e9;
  background-color: white !important;
}

.middleline {
  flex: 2;
  background-color: #e9e9e9;
}

.lineGreen {
  background-color: #5fe4b1;
  border-color: #5fe4b1 !important;
}

.radio-group {
  margin-top: 40rpx;
  background-color: white;
}

.radio {
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 150rpx;
  border-bottom: 1rpx solid #f7f9fb;
}

.radio>view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}

radio {
  margin-right: 20rpx;
}

.userName {
  font-size: 28rpx;
  font-weight: 500rpx;
}

.userLocation {
  font-size: 24rpx;
}
.addNewAddrees{
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
  justify-content: space-between;
  font-size: 28rpx;
  align-items: center;
  background-color: white;
  height: 80rpx;
  margin-top: 20rpx;
}

.conservation {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.conservation button {
  height: 80rpx;
  width: 690rpx;
  background-color: #5fe4b1;
  color: white;
  font-size: 32rpx;
}
