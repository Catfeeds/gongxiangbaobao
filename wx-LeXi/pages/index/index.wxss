.store-head {
  position: relative;
  height: 596rpx;
  margin-bottom: 60rpx;
}

.store-head .store-bg {
  width: 750rpx;
  height: 280rpx;
}

.store-head .store-user {
  background-color: white;
  border-radius: 8rpx;
  position: absolute;
  top: 190rpx;
  left: 40rpx;
  width: 670rpx;
  box-shadow: 0px 3px 25px 0px rgba(0, 0, 0, 0.1);
  z-index: 9;
}

.store-head .store-user .user-photo {
  border: 3rpx solid white;
  height: 130rpx !important;
  width: 130rpx !important;
  border-radius: 4px;
  position: absolute;
  left: 50%;
  top: -60rpx;
  transform: translateX(-50%);
  z-index: 900;
  background-color: white;
}

.store-head .store-user .store-user__container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 93rpx;
  width: 670rpx;
  position: relative;
}

.store-user__container .approve-photo {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  z-index: 10;
}

.approve-photo .icon-approve {
  height: 36rpx;
  width: 118rpx;
}

.user-name-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.user-name-box .name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.user-name-box .store-pic {
  height: 32rpx;
  width: 32rpx;
  border-radius: 50%;
  background-color: #5fe4b1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}

.user-name-box .store-pic .icon-store {
  height: 17rpx;
  width: 20rpx;
}

.middle-user-info .shop-explain {
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(100, 100, 100, 1);
  margin-top: 25rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.middle-user-info .location-add-other {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.middle-user-info .location-add-other .location {
  flex: 0 0 auto;
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.middle-user-info .location-add-other .location .icon-map {
  width: 15rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.middle-user-info .location-add-other .location .address,
.middle-user-info .location-add-other .fans .name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.middle-user-info .location-add-other .fans {
  display: flex;
  align-items: center;
  margin-left: 50rpx;
}

.middle-user-info .location-add-other .fans .name {
  margin-right: 10rpx;
}

.middle-user-info .location-add-other .fans .count {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.user-info-action {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}

.user-info-action .user-info-btn {
  flex: 0 0 280rpx;
  width: 280rpx;
  height: 70rpx;
  background: #5fe4b1;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
