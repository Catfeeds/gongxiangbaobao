}

.tabs .tab .name {
  font-size: 30rpx;
  font-weight: 400;
  height: 74rpx;
  line-height: 74rpx;
  color: rgba(85, 85, 85, 1);
}

.tabs .tab .line {
  width: 27rpx;
  height: 6rpx;
  background: #fff;
}

.tabs .tab.active .name {
  color: #5fe4b1;
