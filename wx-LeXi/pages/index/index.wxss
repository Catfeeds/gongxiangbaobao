}

.store-join-number .store-visitors {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.store-join-number .store-visitors .avatars {
  flex: 0 0 582rpx;
  background: url("https://static.moebeast.com/static/img/shadow.png") no-repeat center right;
  height: 75rpx;
