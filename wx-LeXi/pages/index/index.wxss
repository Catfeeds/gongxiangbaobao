  width: 58rpx;
  height: 58rpx;
  background: rgba(0, 0, 0, 1);
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 58rpx;
  text-align: center;
  margin-left: 30rpx;
}

.store-notice {
  padding: 0 40rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.store-notice .notice-title {
  width: 130rpx;
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
  position: absolute;
  top: -16rpx;
  left: 80rpx;
  z-index: 9;
  text-align: center;
  background-color: #fff;
}

.store-notice .notice-box {
  padding: 40rpx 28rpx;
  border: 1rpx solid #e9e9e9;
  border-radius: 8rpx;
  position: relative;
  font-size: 26rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(102, 102, 102, 1);
}

.store-notice .notice-box > view {
  overflow: hidden;
}

.store-notice .notice-box .view-all {
  margin-left: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(110, 215, 175, 1);
}

.tabs {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e9e9e9;
}

.tabs .tab {
  padding: 0 40rpx;
