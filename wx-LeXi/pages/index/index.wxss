.reverseTriangleBox {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex: 50%;
}

.reverseTriangle {
  height: 10rpx;
  width: 12rpx;
  margin-left: 10rpx;
  position: relative;
  overflow: hidden;
}

.reverseTriangle::after {
  display: inline-block;
  content: " ";
  height: 100%;
  width: 100%;
  background-color: black;
  transform: rotate(45deg);
  position: absolute;
  top: -30%;
}

