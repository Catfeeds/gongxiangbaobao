  flex-direction: column;
}

.goodsTitle {
  font-size: 28rpx;
  font-weight: 700;
}

.pickBox {
  flex: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.pickBox view {
  margin-right: 40rpx;
}

.pick {
  font-size: 28rpx;
}

.pickItem {
  padding: 12rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.noActive {
  border: 1rpx solid #eff4f7;
}

.active {
  background-color: #5fe4b1;
  color: white;
}

.shopBtn {
  width: 670rpx;
  height: 82rpx;
  font-size: 32rpx;
  color: white;
  background-color: #5fe4b1;
}

.shopBtnBox {
  flex: 1;
}
.produckNumber{
  padding: 0 30rpx;
  height: 90rpx;
  border: 1rpx solid #eff4f7;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  line-height: 90rpx;
  justify-content: space-between;
  background-color: white;
}
.goodsList{
  padding-left: 30rpx;
  background-color: white;
}
.goodsListItem{
  border-bottom: 1rpx solid #eff4f7;
  padding: 40rpx 30rpx 40rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  justify-content: space-between;
}
