.shopCartNon {
  height: 350rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx;
}

.cartIcon {
  height: 138rpx;
  width: 138rpx;
