  font-size: 24rpx;
}

.thinkOrderAddCartBox {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 750rpx;
  background-color: rgba(000, 000, 000, 0.5);
  z-index: 999;
}

.priceAndname {
  flex: 1;
}

.thinkOrderAddCart {
  min-height: 370rpx;
  width: 670rpx;
  background-color: white;
