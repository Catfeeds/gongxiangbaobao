}

.branderInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}

.goodsInfoBox {
  padding: 30rpx;
  background-color: white;
}

.cureentPrice {
  font-size: 34rpx;
