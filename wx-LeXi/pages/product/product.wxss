  align-items: center;
  margin-left: 20rpx;
}

.goods-size {
  background-color: #f0f4f7;
  height: 80rpx;
  border-radius: 10rpx;
}

.goods-size .textInfo {
  font-size: 28rpx;
  color: #555;
  flex: 10;
  text-align: center;
  font-weight: 400;
}

.goods-size .icon {
  font-size: 20rpx;
  flex: 1;
}

.ordertext {
  font-size: 22rpx;
  color: #555;
}

.likeBox {
  height: 104rpx;
  background-color: white;
