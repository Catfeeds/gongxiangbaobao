}

.add_cart--number {
  position: absolute;
  top: 0rpx;
  right: 20rpx;
  height: 24rpx;
  width: 24rpx;
  background-color: #f66;
  border-radius: 50%;
  font-size: 16rpx;
  overflow: hidden;
}

.cart_text--color {
  color: #949ea6;
  font-size: 22rpx;
}

.subscript {
  position: absolute;
  color: white;
  bottom: 3rpx;
  right: 30rpx;
  z-index: 88;
  text-shadow: 1px 2px 3px rgba(0, 0, 0, 0.4);
