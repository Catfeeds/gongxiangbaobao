  background-color: #fbf7f3;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 30rpx;
}

.product-all-info {
  position: fixed;
  top: 0;
  /* bottom: -2000rpx; */
  height: 100%;
  width: 100%;
  background-color: white;
  overflow: auto;
  z-index: 100;
}

.off-info {
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  background-color: white;
  box-shadow: 0 -50rpx 100rpx 50rpx white;
}

.shop-cart {
