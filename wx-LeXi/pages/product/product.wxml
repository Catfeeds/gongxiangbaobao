<!--pages/product/product.wxml 产品详情-->
<import src="../couponTemplate/couponTemplate.wxml" />
<view class='container theme-bg-color'>

  <!-- 轮播图 123-->
  <view class='swiperBox'>
    <swiper indicator-dots="true" autoplay="true">
      <block wx:for="{{productInfomation.assets}}" wx:key="{{index}}">
        <swiper-item display-multiple-items="{{index}}">
          <image src="{{item.view_url}}" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!--轮播图 产品底部信息 -->
  <view class='goodsInfoBox'>
    <view class='branderInfo'>
      <text class='logistics' wx:if="{{productInfomation.is_free_postage}}">包邮</text>
      <text>{{productInfomation.name}}</text>
    </view>
    <view class='branderInfo'>
      <text class='cureentPrice'>￥{{productInfomation.min_sale_price==0?productInfomation.min_price:productInfomation.min_sale_price}}</text>
      <text class='origPrice' wx:if="{{productInfomation.min_sale_price!=0}}">￥{{productInfomation.min_price}}</text>
    </view>

    <view class='characteristic branderInfo'>
      <text class='{{characteristicT}}' wx:for='{{productInfomation.labels}}' wx:key='{{index}}'>{{item.name}} · </text>
      <text class='theme-green' wx:if='{{productInfomation.labels.length>5}}'> +3 ></text>
    </view>
    <!-- 喜欢心愿单 -->
    <view class='branderInfo like-quantity'>
      <view class='like-quantity-l'>
        <!-- <text class='fx-icon-like'></text> -->
        <image src='../../images/dLike@2.png' class='like-icon'></image>
        <text class='hui-zi'> +{{productInfomation.like_count}}</text>
      </view>
      <view class='transmission'>
        <view class='like-quantity-l'>
          <text class='fx-icon-nothing-plus'></text>
          <text class='hui-zi'> 心愿单</text>
        </view>
        <view class=' like-quantity-l transmissionInfo'>
          <image class='fen' src='../../images/share@2.png'></image>
        </view>
      </view>
    </view>
    <!-- 领取优惠券 -->
    <view class='coupon-box' catchtap='coupon_show'>
      <fx-coupon></fx-coupon>
    </view>
    <view class='branderInfo  goods-size' catchtap='pickShowTap'>
      <text class='textInfo'>请选择规格和尺码</text>
      <text class='fx-icon-nothing-lower icon'></text>
    </view>

    <view class='ordertext'>“接单订制”在付款后开始制作，需{{productInfomation.made_cycle}}个制作天（{{productInfomation.is_made_holiday?'':'不'}}包含节假日）</view>

  </view>

  <!-- 有多少人喜欢 -->
  <view class='likeBox'>
    <view class='roundL'>
      <image src='../../images/timg.jpg' class='photo-round'></image>
      <image src='../../images/timg.jpg' class='photo-round'></image>
      <view class='photo-round'>
        <open-data type='userAvatarUrl'></open-data>
      </view>
    </view>
    <view class='roundR' catchtap='watchTap'>···</view>
  </view>

  <!-- 描述,发货地，时间 -->
  <view class='otherInfo'>
    <!-- 描述 -->
    <view class='otherInfo-describe'>
      <view class='titleText'>描述</view>
      <view class='goodstext two-line-text'>
        <text class='titlemini'>亮点：</text>
        <text>{{productInfomation.features}}</text>
      </view>
      <view class='goodstext'>
        <text class='titlemini'>材质：</text>
        <text>{{productInfomation.material_id}}</text>
      </view>
      <view class='goodstext'>
        <text class='titlemini' wx:if='{{productInfomation.is_custom_service}}'>特点： </text>
        <text>可提供定制化服务</text>
      </view>
      <view class='goodstext'>
        <text class='titlemini'>数量：</text>
        <text>仅剩最后{{productInfomation.stock_count}}件</text>
      </view>
    </view>

    <!-- 发货地点 -->
    <view class='otherInfo-describe location'>
      <view class='titleText'>发货地</view>
      <view class='goodstext'>台湾.花莲</view>
    </view>

    <!-- 交货时间 -->
    <view class='otherInfo-describe location'>
      <view class='titleText'>交货时间</view>
      <view class='goodstext'>预计3-5天到达
        <text class='theme-green'> 遵义</text>
      </view>
    </view>

    <!-- 退货政策 -->
    <view class='otherInfo-describe location borN'>
      <view class='titleText'>退货政策</view>
      <view class='goodstext'>
        <text class=''> ·</text>
        <text>30天退换货服务</text>
      </view>
      <view class='two-line-text goodstext'>
        预计到达目的地的估计到达3-5，如计到达3-5，如果任何的不满计到达3-5，如果任意你购买，你可以退货或换货之日起30日。请注
      </view>
      <view class='allInfo' catchtap='animationOnFn'>
        <view class='allInfo-btn'>查看全部</view>
      </view>
    </view>
  </view>

