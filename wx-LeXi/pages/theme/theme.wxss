/* pages/theme/theme.wxss */
@import "../user/user.wxss";
.theme-top_box{
  height: 320rpx;
  overflow: hidden;
  margin-bottom: 100rpx;
}
.theme-top_text{
  position: absolute;
  left: 50%;
  top: 248rpx;
  transform: translateX(-50%);
  width: 610rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, .1);
  padding: 30rpx;
  font-weight: 500;
  font-size: 28rpx;
  color:rgba(102,102,102,1);
}
.theme-top_text--width {
  font-size: 38rpx;
  font-weight: 600;
  color:rgba(51,51,51,1);
  margin-bottom: 20rpx;
}
