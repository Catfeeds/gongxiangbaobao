<!--pages/theme/theme.wxml-->
<view class='container'>
  <view class='theme-top_box'>
    <image src='../../images/timg.jpg'></image>
  </view>
  <view class='bg-white fx-column-b theme-top_text'>
    <view class='theme-top_text--width'>夏天，绿色系列</view>
    <view class='black-font shen-hui'>文艺漫步走走停停</view>
  </view>
  <!-- 下面的产品列表 -->
  <view class='goodsList'>
    <view wx:for="{{product}}" wx:key="{{index}}" class='{{(index+1)%5==0?"goodsFive":"goods-item"}}'>
      <fx-product product="{{item}}"></fx-product>
    </view>
  </view>
</view>