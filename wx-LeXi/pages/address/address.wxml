<!--pages/address/address.wxml 收获地址-->
<import src="../addressTemplate/addressTemplate.wxml" />
<view class='container theme-bg-color'>
  <form>
    <!-- top -->
    <view class='adressInfoBox'>
      <view>
        <input 
          placeholder-class="phcolor" 
          placeholder='收件人真实姓名' 
          bindinput='ahndleUserName' 
          value='{{form.first_name}}'></input>
      </view>
      <view>
        <input 
          value='{{form.mobile}}' 
          bindinput='handleMobileCode' 
          placeholder-class="phcolor" 
          placeholder='手机号' 
          type='number'></input>
      </view>
      <!-- 国家 -->
      <view class='adress-pick--style qian-hui'>
        <picker 
          bindchange="bindPickerChange" 
          value="{{index}}" 
          range="{{country.area_codes}}" 
          range-key='name'>
          <view class="picker">
            选择国家：{{country.area_codes[countryIndex].name}}
          </view>
        </picker>
      </view>
      
      <view class='c-crosswise-a adress-pick--style qian-hui'>
      <!-- 省份 -->
        <view>
          <picker 
            bindchange="bindProvinceChange" 
            value="{{index}}" 
            range="{{allProvince}}" 
            range-key='name'>
            <view class="picker ">
              省份：{{allProvince[allProvinceIndex].name}}
            </view>
          </picker>
        </view>
        <!-- 市区 -->
        <view>
          <picker 
            bindchange="bindCityChange" 
            value="{{index}}" 
            range="{{allCity}}" 
            range-key='name'>
            <view class="picker">
              市/区：{{allCity[allCityIndex].name}}
            </view>
          </picker>
        </view>
        <!-- 区/县-->
        <view>
          <picker 
            bindchange="bindAllTownsChange" 
            value="{{index}}" range="{{allTowns}}" 
            range-key='name'>
            <view class="picker">
              县/镇：{{allTowns[allTownsIndex].name}}
            </view>
          </picker>
        </view>
        
      </view>
      <!-- 省市区的三级联动暂时关闭 -->
      <!-- <view class='location' catchtap='T_addressovar'>
        <view class='address-text'>
          <input value='{{s}}'></input>
          <input value='{{sh}}'></input>
          <input value='{{x}}'></input>
        </view>
        <view class='fx-icon-nothing-right'></view>
      </view> -->
      <view class='addressText'>
        <input 
          value='{{form.street_address}}' 
          placeholder-class="phcolor " 
          placeholder='详细地址' 
          bindinput='handleAddressInfo'></input>
      </view>
      <view>
        <input 
          bindinput='handleAdressCode' 
          placeholder-class="phcolor" 
          placeholder='邮政编码' 
          value='{{form.zipcode}}' 
          type='number'></input>
      </view>
    </view>
    <!-- 海关照片信息 -->
    <view>
      <view class='title'>海关政策要求，请填写身份证。加密保存，仅用于海关清关</view>
      <view class='identificationText'>
        <text class='identificationTextL'>收件人身份证：</text>
        <text class='identificationTextR'>请填写收件人身份证</text>
      </view>
      <view class='identificationPhoto'>
        <view class='userPhotoNullBox'>
          <view class='userPhotoNull theme-bg-color' wx:if="{{1}}">+</view>
          <view class='userPhotoNull userPhotoHave' wx:else>
            <image></image>
          </view>
          <view>清晰正面照片</view>
        </view>

        <view class='userPhotoNullBox'>
          <view class='userPhotoNull theme-bg-color' wx:if="{{1}}">+</view>
          <view class='userPhotoNull userPhotoHave' wx:else>
            <image></image>
          </view>
          <view>
            清晰反面照片</view>
        </view>
      </view>
    </view>

    <!-- bottom checkbox  设置为默认的收获地址-->
    <view class=' bottomCheck location'>
      <view>设置为默认地址</view>
      <switch 
        size="10" 
        color="#6ED7AF" 
        checked='{{form.is_default}}' 
        bindchange="switch1Change" />
    </view>
    <view class='dwletebtn'>删除</view>
    <view class='conservation' catchtap='storageTap'>
      <button>保存</button>
    </view>
    <!-- 垫片 -->
    <view class='shim'></view>
  </form>
  <!-- 身份证拍摄呼出 -->
  <view class='cameraOrPhoto' wx:if="{{is_cameraOrPhoto}}">
    <view class='cameraOrPhoto-top'>
      <view class='camera'>拍摄身份证</view>
      <view>从相册选择身份证</view>
    </view>
    <view class='cameraOrPhoto-bottom' catchtap='pickCameraOrPhoto'>取消</view>
  </view>
  <!-- 呼出省市区 -->
  <!-- <template is="msgItem" data="{{is_template:is_template,addressInfo:AllAdress}}" /> -->
</view>