.top-box {
  padding: 40rpx 40rpx 26rpx 40rpx;
}

.user-photo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.photo {
  height: 140rpx;
  width: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}

.photo image {
  height: 100%;
  width: 100%;
}

.user-photo>view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.number {
  font-size: 40rpx;
  font-weight: 600;
  color: #949ea6;
  margin-bottom: 14rpx;
}

.green {
