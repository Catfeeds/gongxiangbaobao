<!--pages/user/user.wxml-->
<view class='container'>
  <view class='top-box'>
    <!-- 头像 -->
    <view class='user-photo'>
      <view class='photo'>
        <image src='{{ userInfo.profile.avatar }}'></image>
      </view>
      <view wx:for="{{ classList }}" wx:key="{{ index }}" data-rid='{{ item.rid }}' catchtap='classTap'>
        <view class='number {{ classInfo == item.rid ? "green" : "" }}'>{{ item.num }}</view>
        <view class='hui-zi {{ classInfo == item.rid ? "green" : ""}}'>{{ item.name }}</view>
      </view>
    </view>
    <!-- 手机号码 -->
    <view>
      <view class='user-name-text'>
        <text wx:if='{{ userInfo.profile.username != null }}'>{{ userInfo.profile.username }}</text>
        <open-data wx:else type="userNickName"></open-data>
      </view>
      <view class='is-login' wx:if='{{ !userInfo.profile.mobile }}'>
        <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">你还未绑定手机号</button>
      </view>
    </view>
    <!-- 粉丝 -->
    <view class='follow'>
      <text class='font-s'> <text class='hui-zi'> 关注 </text>
      <text>123</text> </text>
      <text class='font-s'> <text class='hui-zi'> 粉丝 </text>
      <text>123</text> </text>
    </view>
    <!-- 设置和客服 -->
    <view class='time-top service-intercalate'>
      <view class='time-top'>
        <view class='fei c-middle' catchtap='redBagTap'>
          <image src='../../images/red-bag.png'></image>
        </view>
        <view class='transmission black-font' catchtap='handleToOrderTap'>
          <text>我的订单</text>
          <text class='red-round'></text>
        </view>
      </view>
      <view class=' time-top '>
        <view class='service coupon' catchtap='couponTap'>
          <image class='setings' src='../../images/coupon_icon@2.png'></image>
          <text class='red-round'></text>
        </view>
        <view class='service'>
          <image class='setings' src='../../images/set.png'></image>
        </view>
        <view class='service' catchtap='setTap'>
          <image class='setings' src='../../images/setings.png'></image>
        </view>
      </view>
    </view>
  </view>
  <!-- 以喜欢里面的内容 -->
  <view wx:if="{{classInfo==1}}">
    <!-- 定位垫片 -->
    <view class='Fshim' wx:if="{{sotrF}}"></view>
    <!-- 筛选和排序 -->
    <view class='time-top sotr black-font {{sotrF?"sotrF":""}}'>
      <view>筛选
        <text>↓</text> </view>
      <view>排序
        <text>↓</text> </view>
    </view>
    <!-- 下面的产品列表 -->
    <view class='goodsList'>
      <view 
        wx:for="{{likeProduct.products}}" 
        wx:key="{{index}}" 
        class='{{(index+1)%5==0?"goodsFive":"goods-item"}}'>
        <fx-product 
          product="{{item}}" 
          bind:triggerEvent_product='handleInfomation'></fx-product>
      </view>
    </view>
  </view>
  <!-- 收藏里面的内容 -->
  <view class='shou' wx:if="{{classInfo==2}}">
    <!-- 最近查看 -->
    <view class='c-importantGoods p-null'>
      <view class='c-importantGoodsTitle paymentFnTextB see-all'>
        <text>最近查看</text>
        <text class='see-all hui-zi'>查看全部 <text>></text> </text>
      </view>
      <view class='c-importantGoodsBox'>
        <view 
          catchtap='handleToProductInfoTap'
          data-rid='{{item.rid}}'
          class='c-importantGoodsPhoto GoodsPhoto' 
          wx:for="{{userBrowsesProduct}}" 
          wx:key="{{index}}">
          <image src='{{item.cover}}'></image>
        </view>
      </view>
    </view>
    <!-- 心愿单 -->
    <view class='c-importantGoods p-null'>
      <view class='c-importantGoodsTitle paymentFnTextB see-all'>
        <text>心原单</text>
      </view>
      <view class='c-importantGoodsBox'>
        <view 
          catchtap='handleToProductInfoTap'
          data-rid="{{item.rid}}"
          class='c-importantGoodsPhoto GoodsPhoto' 
          wx:for="{{desireOrderProduct.products}}" 
          wx:key="{{index}}">
          <image src='{{item.cover}}'></image>
        </view>
      </view>
      <view class='shm'></view>
    </view>
  </view>
  <!-- //登陆注册 -->
    <view wx:if="{{is_mobile}}" class='login-bind_box--style'>
      <fx-login bind:customevent='hanleOffLoginBox'></fx-login>
  </view>
</view>