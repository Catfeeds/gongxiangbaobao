<!--components/FxProductMiddleMany/FxProductMiddleMany.wxml 产品组建 多行文本-->

<!--components/FxProductMiddle/FxProductMiddle.wxml-->
<view class='productMiddleBox' data-rid='{{product.rid}}' catchtap='handleProductInfo'>
  <view class='productMiddleBoxPhoto'>
    <image src='{{ product.cover }}-p16' class="shopRecommendGoods-photo" wx:if="{{ !round }}"></image>
    <image src='{{ product.cover }}-p16' class="shopRecommendGoods-photo round" wx:if="{{ round }}"></image>
    <view class='sell_up_text' wx:if="{{product.total_stock==0}}">售 罄</view>
  </view>
  <view class='shopRecommendGoodsR'>
    <view>
      <view class='two-line'>
        <text class='logistics logistics' wx:if="{{product.is_free_postage}}">包邮</text>
        <text class='line-two'>{{ product.name ? product.name : product.product_name }}</text>
      </view>
      <block wx:if="{{ color }}">
        <view class='goodsColor' wx:if="{{product.color||product.size }}">
          <text>{{product.color}}</text>
          <text wx:if="{{product.color&&product.size}}">/</text>
          <text>{{product.size}}</text>
        </view>
      </block>

      <!-- 购买的数量 -->
      <view class='shopingNumber' wx:if="{{shopingNumber}}">x {{product.quantity}}</view>
    </view>
    <!-- 颜色 -->

    <!-- 店铺名称 -->
    <view class='shopingName' wx:if="{{shopName}}">
      <image src='../../images/shop.png'></image>
      <text>{{product.shopName}}</text>
    </view>

    <!-- 价格和喜欢的人数 -->
    <view wx:if="{{price}}" class='price-like-box'>
      <text class='current_price'>¥{{product.min_price}}</text>
      <text wx:if="{{product.min_price==product.min_sale_price}}" class='oldPrice oldPriceDecortion shopRecommendGoodsR-old'>¥{{product.min_price}}</text>
      <text wx:if="{{product.like_count!=0}}" class='shopRecommendGoodsR-old '>喜欢+{{product.like_count}}</text>
    </view>

    <!-- 库存数量 是否售罄 -->
    <view wx:if="{{repertoryNumber&&product.total_stock==0}}" class='repertoryNumber'>该商品已售馨</view>

  </view>
</view>