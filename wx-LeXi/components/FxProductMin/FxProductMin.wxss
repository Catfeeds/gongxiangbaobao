.shopRecommendGoods-photo {
  height: 140rpx;
  width: 140rpx;
}

.shopRecommendGoodsR {
  height: 140rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  margin-right: 40rpx;
}

.shopRecommendGoodsR-old {
  margin-left: 15rpx;
  font-weight: normal;
  font-size: 24rpx;
  color: #999;
}

.oldPriceDecortion {
  text-decoration: line-through;
}

.productMiddle {
  display: flex;
  flex-direction: row;
}

.productMiddleBoxPhoto {
  height: 140rpx;
  width: 140rpx;
}

.logistics {
  display: inline-block;
  height: 26rpx;
  width: 42rpx;
  border-radius: 5rpx;
  background-color: #d4af86;
  color: white;
  font-size: 20rpx;
  line-height: 26rpx;
  text-align: center;
  margin-right: 6rpx;
}

textarea {
  display: inline;
  resize: none;
}

.productMiddleBox {
  display: flex;
  flex-direction: row;
}

.shopingName {
  margin-top: 20rpx;
}

.shopingName image {
  width: 20rpx;
  height: 20rpx;
}

.shopingName text {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #5fe4b1;
  font-weight: normal;
}

.goodsColor {
  font-size: 24rpx;
  color: #b2b2b2;
  font-weight: normal;
  margin-top: 6rpx;
}

.nowarp {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.repertoryNumber {
  font-size: 22rpx;
  color: #e02c2c;
  font-weight: normal;
}

.line-ine {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
