/* components/FxProductComponent/FxProductComponent.wxss */

.direction {
  display: flex;
  flex-direction: column;
}

.photoBox {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.photoBox .sellInfo {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  width: 62rpx;
  height: 36rpx;
  font-size: 20rpx;
  border-radius: 5rpx;
  color: white;
  line-height: 36rpx;
  text-align: center;
}
.photoBox .sellInfo .icon-sold-out {
  width: 62rpx;
  height: 36rpx;
}

.photoBox .cover {
  border-radius: 8rpx;
}
.photoBox .cover-p28 {
  width: 280rpx;
  height: 280rpx;
}
.photoBox .cover-p30x2 {
  width: 326rpx;
  height: 326rpx;
}
.photoBox .cover-p50 {
  width: 670rpx;
  height: 670rpx;
}
.material-quality {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.material-quality .icon-free {
  width: 40rpx;
  height: 24rpx;
  margin-right: 6rpx;
  flex: 0 0 auto;
}

.material-quality .material-quality-text {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.product-price {
  margin-bottom: 40rpx;
  font-size: 24rpx;
}

.product-price .old-price, .product-price .now-price {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.product-price .old-Price {
  text-decoration: line-through;
  color: #c2c2c2;
}

.product-price .like-number {
  font-size: 22rpx;
  color: #999;
}
