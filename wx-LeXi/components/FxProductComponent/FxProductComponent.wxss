/* components/FxProductComponent/FxProductComponent.wxss */
.direction{
  display: flex;
  flex-direction: column;
}
.photoBox{
  width: 100%;
  padding-bottom: 100%;
   height: 0; 
  position: relative;
  border-radius: 8rpx; 
   overflow: hidden; 
}
.photoBox image{ 
}
.sellInfo{
  position: absolute;
  width: 62rpx;
  height: 36rpx;
  /* background-color: #858583; */
  font-size: 20rpx;
  border-radius: 5rpx;
  color: white;
  line-height: 36rpx;
  text-align: center;
  top: 15rpx;
  left: 15rpx;
}
.logistics image,
.sellInfo image{
  height: 100%;
  width: 100%;
}
.material-quality>view{
display: inline-block;
}
.logistics{
  height: 26rpx;
  width: 42rpx;
  border-radius: 5rpx;
  /* background-color: #D4AF86; */
  color: white;
  font-size: 20rpx;
  line-height: 26rpx;
  text-align: center;
  margin-right: 6rpx;
}
.material-quality-text{
  flex: 1;
  font-size: 24rpx;
  margin-top: -2rpx
}
.material-quality{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.productPrice{
  margin-top: -10rpx;
}
.oldPrice,
.nowPrice{
  font-size: 24rpx;
  margin-right: 10rpx;
}
.oldPrice{
  text-decoration: line-through;
  color: #c2c2c2;
}
.like-number{
  font-size: 22rpx;
  color: #999999;
}