.login-method {
  background-color: #fff;
  padding: 40rpx;
}
.login-method .fx-button {
  margin-bottom: 40rpx;
  border-radius: 8rpx;
  padding: 25rpx 0rpx;
  font-size: 28rpx;
  line-height: 1;
}
.login-method .fx-button.primary {
  background-color: #5FE4B1;
  color: #fff;
}
.login-method .fx-button.default {
  border: 1rpx solid rgba(233, 233, 233, 1)
}

.login-box {
  background-color: #fff;
}
.login-box .binding-info {
  width: 690rpx;
  padding: 40rpx 30rpx;
}
.login-box .binding-title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 46rpx;
}
.login-box .field-mobile {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
  padding-bottom: 14rpx;
  margin-bottom: 56rpx;
}
.login-box .field-mobile .country {
  flex: 0 0 110rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: 400;
  margin-right: 20rpx;
  position: relative;
}
.login-box .field-mobile .country .country-code {
  width: 90rpx;
}
.login-box .field-mobile .country .arrow-down {
  height: 13rpx;
  width: 15rpx;
  position: absolute;
  right: 5rpx;
  bottom: 12rpx;
  z-index: 9999;
}
.login-box .field-mobile .input-mobile {
  flex: 1;
  font-size: 34rpx;
  color: #333;
  font-weight: 300;
}
.login-box .placeholder-style {
  color: #b2b2b2;
}
.login-box .field-mobile .delete-input__btn {
  flex: 0 0 auto;
  height: 40rpx;
  width: 40rpx;
  padding-right: 20rpx;
}
.login-box .field-mobile .delete-input__btn .icon-clear {
  width: 40rpx;
  height: 40rpx;
}

.login-box .field-mobile .verify-code {
  flex: 0 0 auto;
  border: 1rpx solid #b2b2b2;
  border-radius: 30rpx;
  color: #999;
  font-size: 22rpx;
  padding: 14rpx 23rpx;
  text-align: center;
}
.login-box .field-mobile .verify-code.active {
  border-color: #5fe4b1;
  color: #5fe4b1;
}

.login-box .field-verify-code {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
  padding-bottom: 20rpx;
  margin-bottom: 60rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: 300;
}
.login-box .field-verify-code .input__inner {
  flex: 1;
}
.login-box .field-verify-code .error-text {
  flex: 0 0 auto;
  color: #f66;
}
.login-box .fx-button {
  background-color: #DADADA;
  color: #fff;
  font-size: 32rpx;
  font-weight: 400;
}
.login-box .fx-button.active {
  background-color: #5FE4B1;
}

