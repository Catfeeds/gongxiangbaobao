/* 选择国家 */

.pick-country-box {
  position: fixed;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 10000;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  -webkit-animation: slideInDown .5s;
  animation: slideInDown .5s;
}
.pick-country-box--active {
  -webkit-animation: slideInUp .5s;
  animation: slideInUp .5s;
}
.pick-country-box .block-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  border-bottom: 1rpx solid #e9e9e9;
  flex: 0 0 auto;
  padding: 60rpx 40rpx 20rpx;
}
.pick-country-box .pick-country-btm {
  flex: 1;
  overflow-y: auto;
}
.pick-country-box .pick-country-btm .time-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  padding: 30rpx 40rpx 30rpx;
  color: #333;
}
.pick-country-box .pick-country-btm .time-top .theme-hui-color {
  color: #949EA6;
}
.pick-country-box .pick-country-btm .time-top.active,
.pick-country-box .pick-country-btm .time-top:hover {
  background-color: #f7f9fb !important;
}

.pick-country-box .off-btn_box {
  flex: 0 0 auto;
  text-align: center;
  margin-bottom: 40rpx;
}
.pick-country-box .off-btn_box .off-btn {
  height: 34rpx;
  width: 34rpx;
}

@-webkit-keyframes slideInUp {
  from {
    opacity: 0;
    -webkit-transform: translateY(800px);
    transform: translateY(800px);
  }

  to {
    opacity: 1;
    -webkit-transform: translateY(0px);
    transform: translateY(0px);
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    -webkit-transform: translateY(800px);
    transform: translateY(800px);
  }

  to {
    opacity: 1;
    -webkit-transform: translateY(0px);
    transform: translateY(0px);
  }
}

@-webkit-keyframes slideInDown {
  from {
    opacity: 1;
    -webkit-transform: translateY(0px);
    transform: translateY(0px);
  }

  to {
    opacity: 0;
    -webkit-transform: translateY(800px);
    transform: translateY(800px);
  }
}

@keyframes slideInDown {
  from {
    opacity: 1;
    -webkit-transform: translateY(0px);
    transform: translateY(0px);
  }

  to {
    opacity: 0;
    -webkit-transform: translateY(800px);
    transform: translateY(800px);
  }
}