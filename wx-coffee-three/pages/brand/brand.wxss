/* pages/brand/brand.wxss */
.banner {
  width: 100%;
}
.brand-info {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}
.brand-info .image {
  flex: 1;
  width: 160rpx;
}
.brand-info .image .cover {
  width: 100%;
}
.brand-info .name {
  height: 50rpx;
  flex: 1;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  align-self: center;
}
.brand-info .features {
  color: #666;
}