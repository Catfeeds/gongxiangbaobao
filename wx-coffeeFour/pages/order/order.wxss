/* pages/order/order.wxss */
.page-order__nav {
  background: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}
.page-order__nav .item {
  line-height: 80rpx;
  color: #6b6b6b;
  font-weight: 400;
}
.page-order__nav .item.active {
  color: #8C5A50;
  border-bottom: 4rpx solid #8C5A50;
}
.page-order__list {
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 150rpx; 
}
.fx-order {
  background: #fff;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid RGB(227,227,227);
  border-top: 2rpx solid RGB(227,227,227);
}
.fx-order__head,
.fx-order__body{
line-height: 80rpx;
}
.fx-order__head,
.fx-order__body,
.fx-order__foot {
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fx-order__head,
.fx-order__body {
  border-bottom: 1rpx solid rgba(204, 204, 204, 0.49);
}
.fx-order__head-text{
  font-size: 28rpx;
    color: #8C5A50;
}
.fx-order__body {
  padding: 10rpx 32rpx;
}
.fx-order__item {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fx-order__foot {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
  
}
.fx-order__foot .total-info {
  margin-right: 32rpx;
}
.fx-order__head .status {
  color: #999999;
}

.page-order__empty {
  flex: 1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 240rpx;
  text-align: center;
}
.page-order__empty .tips {
  margin-bottom: 40rpx;
  color: #666666;
}
.empty-status {
  display: flex;
  flex-direction: column; 
}
.empty-status .image {
  width: 200rpx;
  margin-bottom: 32rpx;
}
.fx-order__head-time{
  font-size: 28rpx !important;
  color: #999999 !important;
}
.order-is-payment{
  display: flex;
  flex-direction: row;
  padding:0 auto;
}
.order-is-payment view{
  height: 50rpx;
  width: 160rpx;
  border-radius: 30rpx;
  border: 2rpx solid #D2D2D2 ;
  margin-right: 30rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  color: RGB(102,102,102);
}
.fx-order__content{
 display: flex;
 flex-direction: column;
 justify-content: center !important;

}
.price{
  color: #8C5A50 !important; 
}
.title{
  font-size: 34rpx;

}
.fx-order__image{
  height: 180rpx;
  width: 180rpx;
}
.fx-order__image image{
  width: 100%;
  height: 100%;
}