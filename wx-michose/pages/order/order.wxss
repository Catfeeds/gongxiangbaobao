/* pages/order/order.wxss */
.page-order__nav {
  background: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}
.page-order__nav .item {
  line-height: 80rpx;
  color: #6b6b6b;
  font-weight: 400;
}
.page-order__nav .item.active {
  color: #ff3a31;
  border-bottom: 4rpx solid #ff3a31;
}
.page-order__list {
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 150rpx; 
}
.fx-order {
  background: #fff;
  margin-bottom: 20rpx;
}
.fx-order__head,
.fx-order__body,
.fx-order__foot {
  padding: 0 32rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fx-order__head,
.fx-order__body {
  border-bottom: 1rpx solid rgba(204, 204, 204, 0.49);
}
.fx-order__body {
  padding: 10rpx 32rpx;
}
.fx-order__item {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fx-order__foot {
  justify-content: flex-end;
}
.fx-order__foot .total-info {
  margin-right: 32rpx;
}
.fx-order__head .status {
  color: #ff3a31;
}

.page-order__empty {
  flex: 1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 240rpx;
  text-align: center;
}
.page-order__empty .tips {
  margin-bottom: 40rpx;
  color: #666666;
}
.empty-status {
  display: flex;
  flex-direction: column; 
}
.empty-status .image {
  width: 200rpx;
  margin-bottom: 32rpx;
}