/**index.wxss**/
.fx-swiper {
  display: flex;
  height: 540rpx;
  width: 100%;
}
.fx-swiper .slide-image {
  width: 100%;
}
.block-bonus {
  margin: 20rpx 0rpx 0rpx 20rpx;
  width: 100%;
  white-space: nowrap;
}
.fx-bonus {
  width: 180rpx;
  display: inline-block;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.fx-bonus__info {
  background: #ff3a31;
  border-radius: 4rpx;
  padding: 20rpx 10rpx;
  display: flex;
}
.fx-bonus__info.received {
  background: #959595;
}
.fx-bonus__info .amount {
  font-size: 48rpx;
  flex: 0 0 85rpx;
  text-align: right;
}
.fx-bonus__info .currency {
  flex: 1;
  padding-top: 8rpx;
}

.newest-products,
.selected-brands {
  display: flex;
  white-space: nowrap;
  margin-top: 20rpx;
}
.newest-products .product-item {
  width: 150px;
  display: inline-block;
  margin-right: 20rpx;
}
.newest-products .product-item:last-child {
  margin-right: 0rpx;
}

.selected-brands {
  background: #ffffff;
  height: 150rpx;
}
.selected-brands .brand-item {
  width: 100px;
  display: inline-block;
}
.selected-brands .brand-item:last-child {
  margin-right: 0rpx;
}
.two-lang-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  padding: 16rpx 0;
  width: 100%;
  color: #000000;
}
.two-lang-title .en-title {
  flex: 1;
  font-weight: 500;
}
.two-lang-title .zh-title {
  flex: 1;
}

.fx-topic {
  background: #ededed;
  padding-top: 16rpx;
}
.fx-topic__item {
  margin-bottom: 10rpx;
  height: 405rpx;
}
.fx-topic__item:last-child {
  margin-bottom: 0rpx;
}
.fx-topic__item .cover {
  width: 100%;
  display: inline-block;
  border-bottom: 4rpx solid #2b3b4a;
}

.product-list--sticked {
  display: flex;
  flex-flow: row wrap;
  padding-top: 16rpx;
  justify-content: space-between;
  background: #ededed;
}
.product-list--sticked .product-item {
  flex: 0 0 49%;
  margin-bottom: 16rpx;
  width: 240rpx;
  height: 375rpx;
}