.fx-order-product {
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
}
.fx-order-product.border {
  border-bottom: 1rpx solid rgba(204 ,204, 204, 0.2);
}
.fx-order-product .cover {
  flex: 0 0 120rpx;
  margin-left: 20rpx;
}
.fx-order-product .image {
  width: 100%;
  border: 1rpx solid #d5d5d5;
}
.fx-order-product .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.fx-order-product .content .mode {
  color: #666666;
  margin-top: 15rpx;
  font-size: 24rpx;
}
.fx-order-product .content .sale-price {
  color: #FE696E;
  margin-top: 15rpx;
}
