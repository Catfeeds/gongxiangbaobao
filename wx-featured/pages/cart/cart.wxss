/* pages/cart/cart.js.wxss */
.page-cart__empty {
  flex: 1;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.page-cart__empty .tips {
  margin-bottom: 40rpx;
  color: #666666;
}
.fx-cart-item {
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.fx-cart-item__body {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
}
.fx-cart-item__body .checkbox {
  flex: 0 0 auto;
  font-weight: 500;
}
.fx-cart-item__body .checkbox .active {
  color: #FE696E;
}
.fx-cart-item__body .cover {
  flex: 0 0 120rpx;
  margin-left: 20rpx;
}
.fx-cart-item__body .image {
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #d5d5d5;
}
.fx-cart-item__body .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  line-height: 50rpx;
}
.fx-cart-item__body .content .mode {
  color: #666666;
}
.fx-cart-item__body .content .box-bottom {
  display: flex;
  justify-content: space-between;
}
.fx-cart-item__body .content .sale-price {
  color: #FE696E;
}
.fx-cart-item__body .content .quantity {
  width: 200rpx;
}
.fx-cart-item__body .actions {
  flex: 0 0 auto;
  align-self: flex-start;
  text-align: right;
}