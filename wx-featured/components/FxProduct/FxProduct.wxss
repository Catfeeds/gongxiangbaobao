/* components/FxProduct/FxProduct.wxss */
.fx-product {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.fx-product__image {
  flex: 1;
}
.fx-product__image .cover {
  width: 100%;
  height: 200rpx;
}
.fx-product .name {
  height: 80rpx;
  flex: 1;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.fx-product__price {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.fx-product__price .sale-price {
  color: #FE696E;
}
.fx-product__price .price {
  color: #959595;
  text-decoration: line-through;
  margin-left: 10rpx;
  font-size: 24rpx;
}