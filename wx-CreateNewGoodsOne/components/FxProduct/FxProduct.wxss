/* components/FxProduct/FxProduct.wxss */
.fx-product {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
  .fx-product__image {
  width: 100%;
   height: 0;
  padding-bottom: 100%;
}  

.fx-product__image .cover {
  height: 100%;
  width: 100%;
  /* transition: opacity 1s linear 2s; */
}
.fx-product .name {
  height: 80rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: wrap;
}
.fx-product__price {
  display: flex;
  align-items: center;
  margin-top: 10rpx;

}
.fx-product__price .sale-price {
  color:#FF6464;
  font-size: 30rpx;
}
.fx-product__price .price {
  color: #d5d5d5;
  text-decoration: line-through;
  margin-left: 10rpx;
  font-size: 24rpx;
}
.fx-icon-plus{
  font-size: 30rpx;
  color: red;
}