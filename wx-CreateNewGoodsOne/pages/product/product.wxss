}

.page-product__header .features {
  color: #d5d5d5;
  margin-top: 20rpx;
}

.page-product__header .sale-price {
  font-weight: 700;
  font-size: 34rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-product__header .price {
  color: #222;
  text-decoration: line-through;
  margin-left: 20rpx;
  flex: 1;
  font-weight: normal;
  font-size: 34rpx;
}

.page-product__header .wxacode {
  align-self: flex-end;
  font-size: 24rpx;
  color: #be8914;
}

