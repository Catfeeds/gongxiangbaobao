.page-product__footer {
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9;
  width: 100%;
}

.page-product__footer .btn {
  width: 20%;
  text-align: center;
  float: left;
  font-size: 28rpx;
}

.page-product__footer .btn .text {
  font-size: 24rpx;
  display: block;
}

.page-product__footer .btn.cart, .page-product__footer .btn.collect {
  height: 80rpx;
  margin-top: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-product__footer .btn.collect.favorited {
  color: #ff3a31;
}

.page-product__footer .join-cart {
  background: white;
  color: #ff6464;
  width: 30%;
  line-height: 80rpx;
  border-left: 2rpx solid #d5d5d5;
  box-sizing: border-box;
  font-size: 34rpx;
}

.page-product__footer .quick-buy {
  background: #ff6464;
  color: #fff;
  width: 30%;
  line-height: 80rpx;
  font-size: 34rpx;
}

.fx-sku-box {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 50%;
  padding-bottom: 50rpx;
  background: #fff;
  font-size: 28rpx;
}

.fx-sku-box .close {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  color: #5f646e;
  z-index: 101;
}

.fx-sku-box .sku-header {
  padding: 20rpx 0 40rpx 300rpx;
  min-height: 115rpx;
  position: relative;
  border-bottom: 1px solid #d5d5d5;
}

.fx-sku-box .sku-header .sku-image {
  width: 100px;
  height: 100px;
  position: absolute;
  top: -28px;
  left: 10px;
  overflow: hidden;
  border: 1px solid #d5d5d5;
  padding: 1px;
  background-color: #fff;
}

.fx-sku-box .sku-header .price {
  font-size: 34rpx;
  color: #222;
  display: block;
}

.fx-sku-box .sku-header .stock {
  color: #d5d5d5;
  display: block;
  margin-top: 40rpx;
}

.fx-sku-box .block {
  margin: 20rpx 20rpx;
}

.fx-sku-box .block .sku-group {
  margin-top: 10rpx;
  display: flex;
}

.fx-sku-box .block .option {
  background: #fafafa;
  border: 1px solid #e6e6e6;
  padding: 6rpx 24rpx;
  line-height: 40rpx;
  margin-right: 20rpx;
}

.fx-sku-box .block .option.active {
  color: #be8914;
  border-color: #be8914;
}

.fx-sku-box .block .option:last-child {
  margin-right: 0;
}

.fx-sku-box .block .option.disabled {
  color: gray;
  border-color: #f1f1f1;
  cursor: not-allowed;
  background: #f1f1f1;
}

.fx-sku-box .block.quantity .block-title {
  line-height: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.fx-sku-box .block.quantity .quantity-input {
  width: 280rpx;
  margin-top: 10rpx;
}

.fx-sku-box .sku-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}

.fx-sku-box .sku-footer .btn-group .confirm {
  color: #fff;
  width: 100%;
  line-height: 80rpx;
  display: inline-block;
  text-align: center;
  font-size: 34rpx;
}

/* .fx-sku-box .sku-footer .btn-group .confirm.cart {
  background: #444444;
} */

.fx-sku-box .sku-footer .choose-submit {
  display: flex;
  align-content: center;
}

.fx-sku-box .sku-footer .choose-submit .confirm {
  color: #fff;
  flex: 0 0 50%;
  line-height: 80rpx;
  text-align: center;
}

.fx-sku-box .sku-footer .choose-submit .confirm:first-child {
  background: #444;
}

.fx-sku-box .sku-footer .choose-submit .confirm:last-child {
  background: #be8914;
}

.fx-btn-cart {
  position: absolute;
  right: 20px;
  top: 20px;
  z-index: 99;
  font-size: 15px;
}

.fx-product-header, .fx-sku-group, .fx-ship-address, .fx-product-brand {
  margin-top: 10px;
}

.fx-poster {
  position: fixed;
  top: 60rpx;
  right: 100rpx;
  bottom: 140rpx;
  left: 100rpx;
  z-index: 100;
  background: #fff;
  display: flex;
  font-size: 24rpx;
  flex-direction: column;
}

.fx-poster-image {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #ccc;
  padding: 32rpx;
}

.fx-poster-image .cover {
  width: 100%;
}

.fx-poster-image .loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.fx-poster-image .tips {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.fx-poster-action {
  flex: 0 0 100rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  align-items: center;
}

.fx-poster-action .btn-save {
  width: 320rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.goods-receive-location {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;
  color: #101010;
}

.bottom-mar-none {
  margin-top: 20rpx;
}

.top-title {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  color: #999;
}

.top-title-l-line {
  height: 4rpx;
  width: 240rpx;
  background-color: #e7e7e7;
}

.look-all-critique {
  height: 88rpx;
  border-bottom: 1px solid #d5d5d5;
  text-align: center;
  line-height: 88rpx;
  background-color: white;
  font-size: 30rpx;
}

.goodsinfo-photo-box {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.goodsinfo-photo-box image {
  width: 710rpx;
}

.bottom-shim {
  height: 100rpx;
}

.add-cart {
  height: 50rpx;
  width: 50rpx;
}

.fx-icon-like {
  font-size: 40rpx;
}

.delete-line {
  text-decoration: line-through;
  font-size: 20rpx !important;
  color: #999 !important;
}

.new-price {
  font-size: 34rpx;
}

.is_pickLocation-box {
  height: 750rpx;
  background-color: white;
  overflow: auto;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  width: 750rpx;
}

.is_pickLocation-box-item {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #e6e6e6;
  align-items: center;
}

.pick-btn {
  margin: 0 40rpx;
}

.receive-goods-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-receive-name {
  font-size: 30rpx;
  color: #222;
}

.user-receive-city {
  font-size: 30rpx;
  color: #666;
}
