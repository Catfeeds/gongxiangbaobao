.page-order__empty {
  flex: 1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 240rpx;
  text-align: center;
}
.page-order__empty .tips {
  margin-bottom: 40rpx;
  color: #666666;
}
.empty-status {
  display: flex;
  flex-direction: column; 
}
.empty-status .image {
  width: 200rpx;
  margin-bottom: 32rpx;
}
.all-order{
   margin-bottom: 20rpx;
}
.all-order-item{
  padding: 30rpx;
  background-color: white;
  border-bottom: 2rpx solid #E6E6E6;
 
}
.box-non-payment{
  height: 90rpx;
   border-bottom: 2rpx solid #E6E6E6;
   display: flex;
   flex-direction: row;
   align-items: center;
   font-size: 30rpx;
   padding: 0 30rpx;
   background-color: white;
}
.box-non-payment>view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;

}
.non-payment-padding{
  margin-right: 30rpx;
}

.non-payment-text-r{
  justify-content: flex-end;
}
.fx-icon-nothing-right{
  width: 14rpx;
  height: 24rpx;
  color: #CCCCCC ;
}
.payment-clear-box{
  height: 170rpx;
  border-bottom: 2rpx solid #E6E6E6;
  background-color: white;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 30rpx;
  justify-content: space-around;
}
.clear-payment-btn{
  display: flex;
  flex-direction: row;
}
.clear-payment-btn>view{
  height: 50rpx;
  width: 160rpx;
  border-radius: 30rpx;
  border: 1rpx solid #D2D2D2;
  text-align: center;
  line-height: 50rpx;
  margin-left: 20rpx;
}
.clear-payment-btn-border{
  border: 1rpx solid #FF6464 !important;
}