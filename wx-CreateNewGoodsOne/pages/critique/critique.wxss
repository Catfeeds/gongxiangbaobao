.top-catgory {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.top-catgory-info {
  margin: 10rpx;
  height: 50rpx;
  width: 160rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  color: #666;
  display: inline-block;
  box-sizing: border-box;
}

.active {
  border: 1rpx solid #ff6464;
  color: #ff6464;
}
