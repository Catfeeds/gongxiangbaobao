/* components/FxProduct/FxProduct.wxss */
.fx-product {
  flex: 1;
  display: flex;
  flex-direction: row;
  margin-bottom: 32rpx;
  font-size: 28rpx;
}
.fx-product__image {
  flex: 0 0 150rpx;
  font-size: 0;
  margin-right: 32rpx; 
}
.fx-product__image .cover {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #E6E6E6;
}
.fx-product__info {
  flex: 1;
  position: relative;
}
.fx-product__info .name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.fx-product__info .fx-product__price {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  margin-top: 10rpx;
}
.fx-product__info .fx-product__price .sale-price {
  color: #8C5A50;
}
.fx-product__info .fx-product__price .price {
  color: #d5d5d5;
  text-decoration: line-through;
  margin-left: 10rpx;
  font-size: 24rpx;
}
.fx-product__info .btn-buy {
  font-size: 30rpx;
  font-weight: 500;
  color: #8C5A50;
  width: 46rpx;
  height: 46rpx;
  border-radius: 46rpx;
  border: 2rpx solid #8C5A50;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  line-height: 44rpx;
  text-align: center;
}