/* components/FxGoodsList/FxGoodsList.wxss */


.goods-info-photo-text{
  position: relative;
  height: 400rpx;
    width: 335rpx;
    border-radius: 20rpx;
    text-align: center;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    overflow: hidden;
}
.coffee-goods-photo{
  height: 220rpx;
  width: 220rpx;
}
.old_price{
  text-decoration:line-through;
  font-size: 24rpx;
  color: #999999;
}
.line{
  width: 100%;
  border-bottom: 2rpx solid RGB(230,230,230);
}
.coffee-name{
  font-size: 34rpx;
  color: #222222;
  margin: 10rpx 0;
}
.new-price{
  height: 34rpx;
  color: #8C5A50;

}
.new-recommend{
  font-size: 24rpx;
  color: #8C5A50 ;
  width: 80rpx;
  height: 50rpx;
  position: absolute;
  top: 0rpx;
  right: 30rpx;
}
.new-recommend-text{
  position: absolute;
  top:10%;
  left: 50%;
  margin-left: -24rpx;
}
.goods-name-price{
  height: 130rpx;
  display: flex;
  flex-direction: column;
}
.fx-promo__title{
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  transform: rotate(-45deg);
  font-size: 26rpx;
  color: #8C5A50;
  background-image: linear-gradient(-225deg, #F7E9CF 4%, #FAF0DE 48%, #F7E9CF 96%);
  border: 2rpx solid #F2DAAD;
  text-align: center;
  position: absolute;
  top: 8rpx;
  left: -118rpx;
}