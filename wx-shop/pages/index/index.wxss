/**index.wxss**/
.fx-swiper {
  display: flex;
  height: 540rpx;
  width: 100%;
}
.fx-swiper .slide-image {
  width: 100%;
}
.block-bonus {
  margin: 20rpx 0rpx 0rpx 20rpx;
  width: 100%;
  white-space: nowrap;
}
.fx-bonus {
  width: 260rpx;
  display: inline-block;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.fx-bonus__info {
  background: #fe787c;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
  padding: 10rpx 10rpx 5rpx;
  display: flex;
  flex-direction: column;
}
.fx-bonus__info .amount {
  font-size: 40rpx;
}
.fx-bonus__info .rule {
  font-size: 24rpx;
  color: #f1f1f1;
}
.fx-bonus__done {
  flex: 1;
  background: #FE696E;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  border-top: 1rpx dashed rgba(255, 255, 255, 0.5);
  text-align: center;
  font-size: 24rpx;
  padding: 4rpx;
}
.fx-bonus__info.received {
  background: #ddd;
}
.fx-bonus__done.received {
  background: #ccc;
}

.newest-products,
.selected-brands {
  display: flex;
  white-space: nowrap;
  margin-top: 20rpx;
}
.newest-products .product-item {
  width: 150px;
  display: inline-block;
  margin-right: 20rpx;
}
.newest-products .product-item:last-child {
  margin-right: 0rpx;
}
.selected-brands .brand-item {
  width: 100px;
  display: inline-block;
  margin-right: 20rpx;
}
.selected-brands .brand-item:last-child {
  margin-right: 0rpx;
}

.product-list--sticked {
  display: flex;
  flex-flow: row wrap;
  margin-top: 20rpx;
  justify-content: space-between;
}
.product-list--sticked .product-item {
  flex: 0 0 48%;
  margin-bottom: 32rpx;
}